{%- if section.settings.enable__sticky_header != "none" and template.name != 'product' and template.name != 'collection' -%}
<sticky-header class="display-flex sticky-header{% if section.settings.sticky_type == "scroll" %} sticky-header-scroll{% endif %} enable-on__{{ section.settings.enable__sticky_header }}"></sticky-header>
{%- endif -%}
