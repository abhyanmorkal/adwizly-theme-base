{%- render "component-header-search-modal", section:section -%}
{%- render "component-header-interface", section:section -%}

<menumodal-dialog id="header-modal-mainmenu" class="popup-modal popup-modal__center-desktop header-modal-mainmenu{% if request.design_mode and section.settings.admin_open_menu %} active animate{% endif %}">
  <div class="popup-modal__overlay" onclick="this.closest('.popup-modal').close()"></div>
  <div class="popup-modal__content">
    <button class="popup-modal__toggle modal-close-animation" type="button" onclick="this.closest('.popup-modal').close()" aria-label="{{ 'accessibility.close' | t }}">
      {{- 'icon-close' | append: settings.system_icon_thickness | inline_asset_content -}}
    </button>
    <div class="popup-modal__content__data custom__scrollbar" role="dialog" aria-modal="true" tabindex="-1">
      {%- render "menu-closed",
          section:section,
          linklist:section.settings.menu.links
      -%}
    </div>
  </div>
</menumodal-dialog>

