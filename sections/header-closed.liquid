{%- render "component-header-style", section:section -%}
<style>
  .header>.search-container{
    min-width:260px;
  }

  .header-modal-mainmenu__button{
    padding:0;
    margin:0;
    background:transparent;
  }
  @media (min-width: 1025px) {
    .header-modal-mainmenu .popup-modal__content {
      width: 100%;
      height: 100%;
    }
    {%- if section.settings.color_modal_bg != "rgba(0,0,0,0)" -%}
    menumodal-dialog .popup-modal__content,
    menumodal-dialog [class*="submenu-design__"]{
      background:{{ section.settings.color_modal_bg }};
    }
    {%- endif -%}
    {%- if section.settings.color_modal_overlay != "rgba(0,0,0,0)" -%}
    menumodal-dialog{
      --color-popup-modal-overlay-rgb:{{ section.settings.color_modal_overlay.red }}, {{ section.settings.color_modal_overlay.green }}, {{ section.settings.color_modal_overlay.blue }};
    }
    {%- endif -%}
    {%- if section.settings.color_search_close  != "rgba(0,0,0,0)" -%}
    menumodal-dialog .popup-modal__toggle{--color-text-icons-block:{{ section.settings.color_search_close }};}
    {%- endif -%}
    {%- if section.settings.color_modal_heading  != "rgba(0,0,0,0)" -%}
    menumodal-dialog .menu-item{
      --color-heading-block:{{ section.settings.color_modal_heading }};
    }
    {%- endif -%}
    {%- if section.settings.color_modal_heading_hover  != "rgba(0,0,0,0)" -%}
    menumodal-dialog .menu-item{
      --color-menu-link-hover:{{ section.settings.color_modal_heading_hover }};
      --color-text-link-hover-block:{{ section.settings.color_modal_heading_hover }};
    }
    {%- endif -%}
    {%- if section.settings.color_modal_item  != "rgba(0,0,0,0)" -%}
    menumodal-dialog .menu-item__submenu{
      --color-text-icons-block:{{ section.settings.color_modal_item }};
      --color-submenu-text-block:{{ section.settings.color_modal_item }};
    }
    menumodal-dialog .submenu__item{
      --color-submenu-text-block:{{ section.settings.color_modal_item }};
    }
    {%- endif -%}
    {%- if section.settings.color_modal_item_hover  != "rgba(0,0,0,0)" -%}
    menumodal-dialog .menu-item__submenu{
      --color-text-link-hover-block:{{ section.settings.color_modal_item_hover }};
      --color-menu-link-hover:{{ section.settings.color_modal_item_hover }};
    }
    menumodal-dialog .submenu__item{
      --color-submenu-text-block-hover:{{ section.settings.color_modal_item_hover }};
    }
    {%- endif -%}
    {%- if section.settings.color_modal_submenu_shadow     != "rgba(0,0,0,0)" -%}
    menumodal-dialog .submenu-design__simple{
      box-shadow: 4px 8px 20px 0px {{ section.settings.color_modal_submenu_shadow | color_modify: 'alpha', 0.15 }};
    }
    {%- endif -%}
    {%- if section.settings.color_modal_item  != "rgba(0,0,0,0)" -%}
    menumodal-dialog .custom__scrollbar::-webkit-scrollbar-thumb {background: {{ section.settings.color_modal_item | color_modify: 'alpha', 0.3 }};}
    menumodal-dialog .custom__scrollbar::-webkit-scrollbar-thumb:hover {background:{{ section.settings.color_modal_item }};}
    {%- endif -%}
  }
</style>
