{%- if template == "index" or section.settings.index_page == false -%}
{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
{{ 'component-swiper-slider.css' | asset_url | stylesheet_tag }}

{%- capture section_styles -%}
{%- capture __css -%}
{%- if section.settings.color_lines  != "rgba(0,0,0,0)" -%}--color-lines:{{ section.settings.color_lines }};{%- endif -%}
{%- if section.settings.color_text_icons  != "rgba(0,0,0,0)" -%}--color-text-icons-block:{{ section.settings.color_text_icons }};{%- endif -%}
{%- if section.settings.color_text_link   != "rgba(0,0,0,0)" -%}
--color-text:{{ section.settings.color_text_link }};
--color-text-link-block:{{ section.settings.color_text_link }};
--color-heading-block:{{ section.settings.color_text_link }};
--color-heading-link-block:{{ section.settings.color_text_link }};
{%- endif -%}
{%- if section.settings.color_text_link_hover != "rgba(0,0,0,0)" -%}
--color-text-link-hover-block:{{ section.settings.color_text_link_hover }};
--color-heading-hover-block:{{ section.settings.color_text_link_hover }};
{%- endif -%}
{%- if section.settings.color_media_arrows    != "rgba(0,0,0,0)" -%}--swiper-pagination-arrow-block:{{ section.settings.color_media_arrows }};{%- endif -%}
{%- endcapture -%}
{%- if __css != blank -%}
#theme-section-{{ section.id }}{
  {{ __css }}
}
{%- endif -%}
{%- endcapture -%}
<style>{{ section_styles }}
#theme-section-{{ section.id }}{
  overflow:hidden;
}
#theme-section-{{ section.id }} .announcement-bar-header__block__icon svg{
  width: 20px;
  height: 20px;
}
.announcement-bar-header{
  display:flex;
  flex-direction:column;
  gap:0;
  align-items: center;
  justify-content:center;
  height:100%;
  min-height:40px;
}
.announcement-bar-header__block{
  display:flex;
  flex-direction:row;
  gap:10px;
  align-items:center;
}
[data-section-name="announcement-bar-header"] [class*="custom-swiper-button"]{
  position:absolute;
  margin-top: 0px;
  left:0;
  top:50%;
  transform: translate(0, -50%);
  z-index: 2;
}
[data-section-name="announcement-bar-header"] .custom-swiper-button-next{
  left:auto;
  right:0;
}
[data-section-name="announcement-bar-header"] .announcement-bar-header__block_text{
  text-align:left;
  display:flex;
  flex-direction:row;
  align-items:center;
  gap:10px;
}
[data-section-name="announcement-bar-header"] .announcement-bar-header__block_text>*{
  margin-top:0;
}
.announcement-bar-header__arrows{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  pointer-events:none;
}
.announcement-bar-header__arrows>*{
  pointer-events:all;
}
[data-section-name="announcement-bar-header"] .swiper{
  width:calc(100% - 60px);
}
.announcement-bar-header__block__icon{
  flex:0 0 auto;
}
@media (min-width:577px){
  .announcement-bar-header{
    {%- if section.settings.background != "hide" -%}
    padding:{{ section.settings.v_padding }}px 20px;
    {%- else -%}
    padding: 10px 20px;
    {%- endif -%}
  }
}
@media (max-width:576px){
  .announcement-bar-header{
    {%- if section.settings.background != "hide" -%}
    padding:{{ section.settings.v_padding }}px 18px;
    {%- else -%}
    padding:10px 18px;
    {%- endif -%}
  }
  [data-section-name="announcement-bar-header"] .announcement-bar-header__block_text{
    flex-direction:column;
    gap:0px;
  }
  [data-section-name="announcement-bar-header"] .custom-swiper-button-prev{
    left:15px;
  }
  [data-section-name="announcement-bar-header"] .custom-swiper-button-next{
    right:15px;
  }
  [data-section-name="announcement-bar-header"] .swiper{
    width:calc(100% - 80px);
  }
}
</style>

{%- render "section-css-background", section:section -%}
{%- render "section-component-top-line", section:section -%}
{%- capture page_width -%}{%- if section.settings.width != "default" %}{{ section.settings.width }}{%- else -%}{{ settings.page_width_main }}{%- endif -%}{%- endcapture -%}
{%- assign section_settings_background = false -%}{%- if section.settings.background != 'hide' and section.settings.background_width == "content_width" -%}{%- assign section_settings_background = true -%}{%- endif -%}

<div id="theme-section-{{ section.id }}"
     class="{% if section.settings.show_lines == false or section.settings.background == 'hide' %}top-spacing-{{ section.settings.top_spacing }}{% endif %}{% if section.settings.background != 'hide' and section.settings.background_width == "fullwidth" %} section-background section-background--none{% endif %}"
     data-section-name="announcement-bar-header">
  <div class="{{ page_width }}{% if section_settings_background %} section-background--mobile-width{% endif %}">
  {%- if section_settings_background -%}<div class="section-background section-background--none border__radius">{%- endif -%}

    {%- capture content -%}
    {%- for block in section.blocks -%}
    <div class="swiper-slide" lazy="true">
      <div id="theme-block-{{ block.id }}" class="announcement-bar-header mt--first-child-0 text-center" {{ block.shopify_attributes }}>
        <div class="announcement-bar-header__block mt--first-child-0 mb--last-child-0 {{ section.settings.content_align }}">
          {%- capture icon_content -%}
          {%- render "component-image-icon",
              show_icon: block.settings.show_icon,
              image: block.settings.image,
              icon: block.settings.icon_name,
              image_custom_width: section.settings.icon_width,
          -%}
          {%- endcapture -%}
          {%- if icon_content != blank -%}
            <div class="announcement-bar-header__block__icon display-flex">
              <div class="display-inline-flex">
                {{ icon_content }}
              </div>
            </div>
          {%- endif -%}
          {%- if block.settings.block_text != blank -%}
            <div class="mt0 announcement-bar-header__block_text body2">{{ block.settings.block_text }}</div>
          {%- endif -%}
        </div>
      </div>
    </div>
    {%- endfor -%}
    {%- endcapture -%}
    <div class="page-grid-1 no-row-gap swiper-no-mask-mobile{% if section.settings.heading_aligment == "text-center" %} justify-content-center{% endif %} position-relative">
      <swiper-slider class="swiper swiper-loop announcement-bar-header__swiper-mask"
                     data-swiper-desktop-grid="1"
                     data-swiper-desktop-lg-grid="1"
                     data-swiper-desktop-md-grid="1"
                     data-swiper-tablet-grid="1"
                     data-swiper-mobile-grid="1"
                     data-gutter="10"
                     data-gutter-mobile="15"
                     data-grid="1,1,1,1,1"
                     {% if section.settings.autoplay_enabled and request.design_mode == false %} data-autoplay-delay="{{ section.settings.autoplay_time | times: 1000 }}"{% endif %}
                     data-autoplay="{%- if section.settings.autoplay_enabled and request.design_mode == false -%}true{%- else -%}false{%- endif -%}"
                     data-script="{{ 'swiper-bundle.min.js' | asset_url }}"
                     data-loop="true"
        >
        <div class="swiper-wrapper">
          {{ content }}
        </div>
      </swiper-slider>
      <div class="swiper-control-container announcement-bar-header__arrows justify-content-center">
        <div class="custom-swiper-button-prev internal-swiper-custom-button-prev display-flex{% unless section.settings.desktop_navigation contains "arrows" %} hide-desktop{% endunless %}{% unless section.settings.mobile_navigation contains "arrows" %} hide-mobile-xl-st{% endunless %}">{{- 'icon-arrow-left' | append: settings.system_icon_thickness | inline_asset_content -}}</div>
        <div class="custom-swiper-button-next internal-swiper-custom-button-next display-flex{% unless section.settings.desktop_navigation contains "arrows" %} hide-desktop{% endunless %}{% unless section.settings.mobile_navigation contains "arrows" %} hide-mobile-xl-st{% endunless %}">{{- 'icon-arrow-right' | append: settings.system_icon_thickness | inline_asset_content -}}</div>
      </div>
    </div>
    {% if section_settings_background %}</div>{%- endif -%}
  </div>
</div>
{%- render "section-component-top-line", section:section, show_line:section.settings.show_lines_bottom -%}
{%- endif -%}

