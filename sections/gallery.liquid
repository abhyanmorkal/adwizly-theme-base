{%- render "section-css-background", section:section -%}
{%- render "section-component-top-line", section:section -%}
{%- capture page_width -%}{%- if section.settings.width != "default" %}{{ section.settings.width }}{%- else -%}{{ settings.page_width_main }}{%- endif -%}{%- endcapture -%}
{%- assign section_settings_background = false -%}{%- if section.settings.background != 'hide' and section.settings.background_width == "content_width" -%}{%- assign section_settings_background = true -%}{%- endif -%}

<div id="theme-section-{{ section.id }}"
     class="{% if section.settings.show_lines == false or section.settings.background == 'hide' %}top-spacing-{{ section.settings.top_spacing }}{% endif %}{% if section.settings.background != 'hide' and section.settings.background_width == "fullwidth" %} section-background section-background--{{ section.settings.background_spacing }}{% endif %}"
     data-section-name="gallery">
  <div class="{{ page_width }}{% if section_settings_background %} section-background--mobile-width{% endif %}">
  {%- if section_settings_background -%}<div class="section-background section-background--{{ section.settings.background_spacing }} border__radius">{%- endif -%}
    {%- if section.settings.background != 'show' and section.settings.show_parallax -%}<div class="section-background__elements"><div class="section-background__elements__item"></div></div>{%- endif -%}
    {%- render "section-heading" section:section -%}

    <div class="section-gallery__container{% if section.settings.heading_aligment == "text-center" %} justify-content-center{% endif %}">
        {%- if section.settings.image_zoom -%}
        <gallery-cursor class="section-gallery__cursor">{{- 'icon-plus' | append: settings.system_icon_thickness | inline_asset_content -}}</gallery-cursor>
        {%- endif -%}
        <masonry-items class="section-gallery page-grid-sp-{{ section.settings.mobile_grid }} {{ section.settings.grid_tablet }} {{ section.settings.grid }}" data-items="{{ section.settings.grid | split: 'grid-' | last }}"{% if section.settings.width == "page-fullwidth" %} data-gutter="0"{% else %} data-gutter="10"{% endif %} data-mobile="true">
            {%- for block in section.blocks -%}
            {%- liquid
                capture placeholder_icon
                cycle 'hero-apparel-1', 'hero-apparel-2'
                endcapture
            -%}
            <div class="section-gallery__item {% if forloop.first %}wokiee-masonry-grid-sizer {% endif %}wokiee-masonry__item {% if section.settings.image_hover == "default" %}{{ settings.image_hover }}{% else %}{{ section.settings.image_hover }}{% endif %}">
                <div class="image-hover-box__container{% if section.settings.image_ratio == '1.00' %} image-hover-box--circle{% endif %}">
                    {%- render "component-image",
                        image_ratio_value: section.settings.image_ratio,
                        image_source: block.settings.image,
                        section_index: section.index,
                        placeholder_icon: placeholder_icon
                    -%}
                </div>
                {%- if section.settings.image_zoom -%}
                <lightbox-opener class="lightbox-opener"
                                 data-id="lightbox-{{ section.id }}"
                                 data-media-id="{{ block.settings.image.id }}"></lightbox-opener>
                {%- endif -%}
            </div>
            {%- endfor -%}
        </masonry-items>
    </div>

    {%- liquid
        assign btn_1 = false
        assign btn_2 = false
        assign i_n_1 = section.settings.icon_name
        assign i_n_2 = section.settings.icon_name_2
        if section.settings.link_name != blank or i_n_1 != blank
        assign btn_1 = true
        endif
        if section.settings.link_name_2 != blank or i_n_2 != blank
        assign btn_2 = true
        endif
    -%}
    {%- if btn_1 or btn_2 -%}
    {%- if section.settings.width == "page-fullwidth" -%}<div class="page-wide">{%- endif -%}
    <div class="mt40 page-grid-1">
      <div class="secondary-btn__container{% if section.settings.heading_aligment == "text-center" %} justify-content-center{% endif %}">
        {%- if btn_1 -%}
        <a href="{{ section.settings.url }}" class="btn btn--border btn__transition-text btn-wide"{% if section.settings.url == blank %} aria-disabled="true"{% endif %}>
          <div class="btn__texts">
            <span class="btn__top-text is-visible">{%- if i_n_1 != blank -%}{%- render "icons-list" icon_name: i_n_1 -%}{%- endif -%}{{ section.settings.link_name }}</span>
            <span class="btn__bottom-text is-hidden">{%- if i_n_1 != blank -%}{%- render "icons-list" icon_name: i_n_1 -%}{%- endif -%}{{ section.settings.link_name }}</span>
          </div>
        </a>
        {%- endif -%}
        {%- if btn_2 -%}
        <a href="{{ section.settings.url_2 }}" class="btn btn--border btn__transition-text btn-wide"{% if section.settings.url_2 == blank %} aria-disabled="true"{% endif %}>
          <div class="btn__texts">
            <span class="btn__top-text is-visible">{%- if i_n_2 != blank -%}{%- render "icons-list" icon_name: i_n_2 -%}{%- endif -%}{{ section.settings.link_name_2 }}</span>
            <span class="btn__bottom-text is-hidden">{%- if i_n_2 != blank -%}{%- render "icons-list" icon_name: i_n_2 -%}{%- endif -%}{{ section.settings.link_name_2 }}</span>
          </div>
        </a>
        {%- endif -%}
      </div>
    </div>
    {%- if section.settings.width == "page-fullwidth" -%}</div>{%- endif -%}
    {%- endif -%}

    {% if section_settings_background %}</div>{%- endif -%}
  </div>
</div>
{%- if section.settings.image_zoom -%}
{%- capture content -%}
{%- for block in section.blocks -%}
{%- assign image = block.settings.image -%}
{%- if image != blank -%}
<div class="swiper-slide" lazy="true">
    <div class="theme-lightbox__image__box">
        <img
        class="theme-lightbox__image border__radius{% if image.width > image.height and section.settings.image_ratio == "auto" %} theme-lightbox__image--wide{% endif %}"
        src="{{ image | image_url: width: 2048 }}"
        alt="{{ image.alt | escape }}"
        width="{{ image.width }}"
        height="{{ image.width | divided_by: image.aspect_ratio | ceil }}"
        data-media-id="{{ image.id }}"
        loading="lazy"
        {% if section.settings.image_ratio != "auto" %}
        style="aspect-ratio:{{ section.settings.image_ratio }};object-fit: cover;max-height: 100%;"
        {% endif %}
        >
    </div>
</div>
{%- endif -%}
{%- endfor -%}
{%- endcapture -%}
{%- if content != blank -%}

{%- render 'style-loader', array:'component-media-gallery.css' -%}
{%- if request.design_mode -%}
<script src="{{ 'media-gallery.js' | asset_url }}" defer></script>
{%- else -%}
<script>
if (!window.mediaGalleryLoaded) {
    var script = document.createElement('script');
    script.src = '{{ "media-gallery.js" | asset_url }}';
    script.defer = true;
    document.head.appendChild(script);
    window.mediaGalleryLoaded = true;
}
</script>
{%- endif -%}

<theme-lightbox id="lightbox-{{ section.id }}" class="theme-lightbox theme-lightbox">
  <div
    class="theme-lightbox__dialog"
    role="dialog"
    aria-label="{{ 'products.modal.label' | t }}"
    aria-modal="true"
    tabindex="-1"
  >
    <button
      id="ModalClose-{{ section.id }}"
      type="button"
      class="theme-lightbox__toggle modal-close-animation"
      aria-label="{{ 'accessibility.close' | t }}"
    >
	  {{- 'icon-close' | append: settings.system_icon_thickness | inline_asset_content -}}
    </button>
    <div
      class="theme-lightbox__content h-full"
      role="document"
      aria-label="{{ 'products.modal.label' | t }}"
      tabindex="0"
    >
      <swiper-slider class="swiper swiper__no-padding-bottom swiper-no-mask-mobile h-full"
                     data-swiper-desktop-grid="1"
                     data-swiper-desktop-lg-grid="1"
                     data-swiper-desktop-md-grid="1"
                     data-swiper-tablet-grid="1"
                     data-swiper-mobile-grid="1"
                     data-gutter="{{ settings.spacing_grid_horizontal }}"
                     data-gutter-mobile="15"
                     data-grid="1,1,1,1,1"
                     data-script="{{ 'swiper-bundle.min.js' | asset_url }}"
        >
        <div class="swiper-wrapper">{{ content }}</div>
      </swiper-slider>
      <div class="swiper-control-container justify-content-center">
        <div class="custom-swiper-button-prev">{{- 'icon-arrow-left' | append: settings.system_icon_thickness | inline_asset_content -}}</div>
        <div class="swiper-pagination"></div>
        <div class="custom-swiper-button-next">{{- 'icon-arrow-right' | append: settings.system_icon_thickness | inline_asset_content -}}</div>
      </div>
    </div>
  </div>
</theme-lightbox>
{%- endif -%}
{%- endif -%}
