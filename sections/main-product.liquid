<section id="MainProduct-{{ section.id }}" data-section="{{ section.id }}" data-product-handle="{{ product.handle }}">
{{ 'section-main-product.css' | asset_url | stylesheet_tag }}
{%- render 'style-loader',
array:'component-dynamic-blocks.css,
component-toggle.css,
component-price.css,
component-product-card.css,
component-visual-display.css,
section-grid-of-products.css,
component-deferred-media.css,
component-media-gallery.css,
component-featured-tabs.css,
swiper-bundle.min.css,
component-swiper-slider.css
' -%}

{%- capture section_styles -%}
{% assign blocks = section.blocks | where: "type", "blurb" %}
{%- for block in blocks -%}
{%- capture __css -%}
{%- if block.settings.color_background_box != "rgba(0,0,0,0)" -%}--color-box-background-block:{{ block.settings.color_background_box }};{%- endif -%}
{%- if block.settings.color_base   != "rgba(0,0,0,0)" -%}--color-base-section:{{ block.settings.color_base }};color:{{ block.settings.color_base }};{%- endif -%}
{%- if block.settings.color_accent != "rgba(0,0,0,0)" -%}--color-accent-section:{{ block.settings.color_accent }};{%- endif -%}
{%- if block.settings.color_lines  != "rgba(0,0,0,0)" -%}--color-lines:{{ block.settings.color_lines }};{%- endif -%}
{%- if block.settings.color_text_icons  != "rgba(0,0,0,0)" -%}--color-text-icons-block:{{ block.settings.color_text_icons }};{%- endif -%}
{%- if block.settings.color_desc != "rgba(0,0,0,0)" -%}--section-text-color:{{ block.settings.color_desc }};{%- endif -%}
{%- if block.settings.color_link  != "rgba(0,0,0,0)" -%}--color-link-button-block:{{ block.settings.color_link }};{%- endif -%}
{%- if block.settings.color_link_hover  != "rgba(0,0,0,0)" -%}--color-link-button-block-hover:{{ block.settings.color_link_hover }};{%- endif -%}
{%- if block.settings.color_link_icon  != "rgba(0,0,0,0)" -%}--color-link-button-icon-block:{{ block.settings.color_link_icon }};{%- endif -%}
{%- if block.settings.color_link_icon_hover  != "rgba(0,0,0,0)" -%}--color-link-button-icon-block-hover:{{ block.settings.color_link_icon_hover }};{%- endif -%}  
{%- if block.settings.color_text_link   != "rgba(0,0,0,0)" -%}--color-heading-link-block:{{ block.settings.color_text_link }};{%- endif -%}
{%- if block.settings.color_text_link_hover != "rgba(0,0,0,0)" -%}--color-heading-hover-block:{{ block.settings.color_text_link_hover }};{%- endif -%}
{%- if block.settings.color_text_icons_bg      != "rgba(0,0,0,0)" -%}--color-secondary-background-block:{{ block.settings.color_text_icons_bg }};{%- endif -%}
{%- endcapture -%}
{%- if __css != blank -%}
#theme-block-{{ block.id }}{
  {{ __css }}
}
{%- endif -%}
{%- endfor -%}

{% assign blocks = section.blocks | where: "type", "countdown" %}
{%- for block in blocks -%}
{%- capture __css -%}
{%- if block.settings.color_base   != "rgba(0,0,0,0)" -%}--color-base-section:{{ block.settings.color_base }};color:{{ block.settings.color_base }};{%- endif -%}
{%- if block.settings.color_lines  != "rgba(0,0,0,0)" -%}--color-lines:{{ block.settings.color_lines }};{%- endif -%}
{%- if block.settings.color_text_icons != "rgba(0,0,0,0)" -%}--color-counter:{{ block.settings.color_text_icons }};{%- endif -%}
{%- if block.settings.color_text_icons_bg != "rgba(0,0,0,0)" -%}--color-secondary-background-block:{{ block.settings.color_text_icons_bg }};{%- endif -%}
{%- if block.settings.color_background_box != "rgba(0,0,0,0)" -%}--color-main-background:{{ block.settings.color_background_box }};{%- endif -%}
{%- if block.settings.color_icon != "rgba(0,0,0,0)" -%}--color-icon:{{ block.settings.color_icon }};{%- endif -%}
{%- endcapture -%}
{%- if __css != blank -%}
#theme-block-{{ block.id }}{
  {{ __css }}
}
{%- endif -%}
{%- endfor -%}

{% assign blocks = section.blocks | where: "type", "gallery" %}
{%- for block in blocks -%}
{%- capture __css -%}
{%- if block.settings.color_heading      != "rgba(0,0,0,0)" -%}--color-heading-block:{{ block.settings.color_heading }};{%- endif -%}
{%- if block.settings.color_tooltip      != "rgba(0,0,0,0)" -%}--color-tooltip-block:{{ block.settings.color_tooltip }};{%- endif -%}
{%- if block.settings.color_tooltip_text != "rgba(0,0,0,0)" -%}--color-tooltip-text:{{ block.settings.color_tooltip_text }};{%- endif -%}
{%- if block.settings.roundness_type == "custom" -%}--radius-image:{{ block.settings.roundness }}px;{%- endif -%}
{%- endcapture -%}
{%- if __css != blank -%}
#theme-block-{{ block.id }}{
  {{ __css }}
}
{%- endif -%}
{%- endfor -%}
{%- endcapture -%}
<style>
  {{ section_styles }}
  @media (min-width:577px){
    .product--thumbnail_slider__mobile{
      display:none;
    }
    #theme-section-{{ section.id }}{
      --product-page-blocks-mt:{{ section.settings.top_spacing_blocks }}px;
    }
  }
  @media (max-width:576px){
    .product--thumbnail_slider{
      display:none;
    }
    #theme-section-{{ section.id }}{
      --product-page-blocks-mt:{{ section.settings.top_spacing_blocks_mobile }}px;
    }
  }
</style>
{%- if section.settings.image_zoom == "hover" -%}
<script id="EnableZoomOnHover-main" src="{{ 'magnify.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- assign first_3d_model = product.media | where: 'media_type', 'model' | first -%}
{%- if first_3d_model -%}
  {{ 'component-product-model.css' | asset_url | stylesheet_tag }}
  <link
    id="ModelViewerStyle"
    rel="stylesheet"
    href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
    media="print"
    onload="this.media='all'"
  >
  <link
    id="ModelViewerOverride"
    rel="stylesheet"
    href="{{ 'component-model-viewer-ui.css' | asset_url }}"
    media="print"
    onload="this.media='all'"
