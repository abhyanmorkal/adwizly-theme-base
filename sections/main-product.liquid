{%- if section.settings.default_variant == "select_variant" and product.variants.size > 1 -%}
<select-option-js></select-option-js>
{%- endif -%}
{%- assign current_variant = product.selected_or_first_available_variant -%}
{%- capture page_width -%}{%- if section.settings.width != "default" %}{{ section.settings.width }}{%- else -%}{{ settings.page_width_main }}{%- endif -%}{%- endcapture -%}
<div id="theme-section-{{ section.id }}"
     class="top-spacing-{{ section.settings.top_spacing }}"
     data-section-name="main-product">
  <div class="{{ page_width }}">
    <div class="main-product__container{% if section.settings.gallery_position == "to right" %} flip-product-content{% endif %}" style="--content-width:{{ section.settings.page_width }}%;width:100%;">
      {%- if product.media.size > 0 -%}
      <div class="product--thumbnail_slider__mobile">
        {% assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src' %}
        <div data-main-color="{{ product.selected_or_first_available_variant.options[0] | downcase }}">
          {%- render 'product-media-gallery-mobile',
              section: section,
              product: product,
              variant_images: variant_images
          -%}
        </div>
      </div>
      <div class="product--thumbnail_slider">
        <div {% if section.settings.enable_sticky_info %}class="product__media-sticky"{% endif %}>
          {% assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src' %}
          {%- if section.settings.media_type contains "columns" -%}
          <div class="media-design__{{ section.settings.media_type }}" data-main-color="{{ product.selected_or_first_available_variant.options[0] | downcase }}">
          {%- render 'product-media-gallery',
              section: section,
              product: product,
              variant_images: variant_images
          -%}
          </div>
          {%- else -%}
          <div class="" data-main-color="{{ product.selected_or_first_available_variant.options[0] | downcase }}">
          {%- render 'product-media-gallery-main',
             section: section,
             product: product,
             variant_images: variant_images 
          -%}
          </div>
          {%- endif -%}
        </div>
      </div>
      {%- endif -%}

      <div class="product__column product__right-column">
        <div id="ProductInfo-{{ section.id }}" class="product__column__content{% if section.settings.enable_sticky_info %} product__right-column-sticky{% endif %}">
          {%- render 'snippet-main-product-sidebar' section:section, product:product, current_variant:current_variant, page_width:page_width -%}
        </div>
      </div>
    </div>
  </div>
</div>
  
      {% assign popups = section.blocks | where: "type", "message" %}
      {%- for block in popups -%}
      <modal-dialog id="PopupModal-message" class="popup-modal popup-modal__right" {{ block.shopify_attributes }}>
        <div class="popup-modal__overlay" onclick="this.closest('.popup-modal').close()"></div>
        <div class="popup-modal__content popup-modal__content__f-height">
          <button class="popup-modal__toggle modal-close-animation" type="button" onclick="this.closest('.popup-modal').close()" aria-label="{{ 'accessibility.close' | t }}">
            {{- 'icon-close' | append: settings.system_icon_thickness | inline_asset_content -}}
          </button>
          <div class="popup-modal__content__data custom__scrollbar" role="dialog" aria-modal="true" tabindex="-1">
            <div class="popup-modal__content__header pickup-availability-header text-center">
              <h4 class="mt0">{{ 'templates.contact.heading_product_page_modal' | t }}</h4>
            </div>
            <div class="popup-modal__content__content popup-modal__content__content--padding">
              {%- form 'contact', id: 'ContactForm' -%}
                <input type="hidden" name="contact[product name]" value="{{ product.title }}" class="form-control">
                <input type="hidden" name="contact[product link]" value="{{ shop.url }}{{ product.url }}" class="form-control">
                <div class="field field-with-icon">
                  <input class="field__input"
                         autocomplete="name"
                         type="text"
                         id="ContactForm-name"
                         name="contact[{{ 'templates.contact.form.name' | t }}]"
                         value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                         placeholder="{{ 'templates.contact.form.name' | t }}"
                         required
                         >
                  <label class="field__label" for="ContactForm-name">{{ 'templates.contact.form.name' | t }}</label>
                  <div class="field__icon">
                    {{- 'icon-account' | append: settings.system_icon_thickness | inline_asset_content -}}
                  </div>
                </div>
      
                <div class="field field-with-icon form-inputs-top-spacing">
                  <input class="field__input"
                         autocomplete="email"
                         type="email"
                         id="ContactForm-email"
                         name="contact[email]"
                         value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                         aria-required="true"
                         {% if form.errors contains 'email' %}
                         aria-invalid="true"
                         aria-describedby="ContactForm-email-error"
                         {% endif %}
                         placeholder="{{ 'templates.contact.form.email' | t }}"
                         required
                         >
                  {%- if form.errors contains 'email' -%}
                  <label class="field__label field__label--error" for="ContactForm-email-error">{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</label>
                  {%- else -%}
                  <label class="field__label" for="ContactForm-email">{{ 'templates.contact.form.email' | t }}</label>
                  {%- endif -%}
                  <div class="field__icon">
					{{- 'icon-mail' | append: settings.system_icon_thickness | inline_asset_content -}}
                  </div>
                </div>
      
                <div class="field field-with-icon form-inputs-top-spacing">
                  <input class="field__input"
                         autocomplete="tel"
                         type="tel"
                         id="ContactForm-phone"
                         name="contact[{{ 'templates.contact.form.phone' | t }}]"
                         pattern="[0-9\-]*"
                         value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                         placeholder="{{ 'templates.contact.form.phone' | t }}"
                         >
                  <label class="field__label" for="ContactForm-phone">{{ 'templates.contact.form.phone' | t }}</label>
                  <div class="field__icon">
					{{- 'icon-phone' | append: settings.system_icon_thickness | inline_asset_content -}}
                  </div>
                </div>
      
                <div class="field field--text-area form-inputs-top-spacing">
                  <textarea rows="10"
                            id="ContactForm-body"
                            class="text-area field__input"
                            name="contact[{{ 'templates.contact.form.comment' | t }}]"
                            placeholder="{{ 'templates.contact.form.comment' | t }}"
                            >
                    {{- form.body -}}
                  </textarea>
                  <label class="field__label" for="ContactForm-body">{{ 'templates.contact.form.comment' | t }}</label>
                </div>
                
                <div class="form-inputs-top-spacing-button">
                  <button type="submit" class="btn btn__transition-text w-full">
                    <div class="btn__texts">
                      <span class="btn__top-text is-visible">{{ 'templates.contact.form.send' | t }}</span>
                      <span class="btn__bottom-text is-hidden">{{ 'templates.contact.form.send' | t }}</span>
                    </div>
                  </button>
                </div>
                {%- if form.posted_successfully? -%}
                <p class="form__message body2 text-center mt16" tabindex="-1" autofocus>{{ 'templates.contact.form.post_success' | t }}</p>
                {%- endif -%}
              {%- endform -%}
            </div>
          </div>
        </div>
      </modal-dialog>
      {%- endfor -%}
  
      {% assign popups = section.blocks | where: "type", "popup" %}
      {%- for block in popups -%}
      <modal-dialog id="PopupModal-{{ block.id }}" class="popup-modal popup-modal__right" {{ block.shopify_attributes }}>
        <div class="popup-modal__overlay" onclick="this.closest('.popup-modal').close()"></div>
        <div class="popup-modal__content popup-modal__content__f-height">
          <button class="popup-modal__toggle modal-close-animation" type="button" onclick="this.closest('.popup-modal').close()" aria-label="{{ 'accessibility.close' | t }}">
			{{- 'icon-close' | append: settings.system_icon_thickness | inline_asset_content -}}
          </button>
          <div class="popup-modal__content__data custom__scrollbar" role="dialog" aria-modal="true" tabindex="-1">
            {%- if block.settings.text_heading != blank -%}
            <div class="popup-modal__content__header pickup-availability-header text-center">
              <h4 class="mt0">{{ block.settings.text_heading }}</h4>
            </div>
            {%- endif -%}
            <div class="popup-modal__content__content popup-modal__content__content--padding mt--first-child-0 body2">
              {{ block.settings.content }}
              {{ block.settings.page.content }}
            </div>
          </div>
        </div>
      </modal-dialog>
      {%- endfor -%}

    {% assign popups = section.blocks | where: "type", "variant_picker" %}
    {%- for block in popups -%}
    {%- assign v_headings = "||" -%}
    {%- for i in (1..6) -%}
    {%- assign variant_name = "variant_name_" | append: i -%}
    {%- assign variant_name = block.settings[variant_name] -%}
    {%- if variant_name != blank -%}
    {%- assign v_headings = v_headings | append: variant_name | append: "||" -%}
    {%- endif -%}
    {%- endfor -%}
    {%- for option in product.options_with_values -%}
    {%- assign option_name = '||' | append: option.name | append: '||' -%}
    {%- if v_headings contains option_name -%}
    <modal-dialog id="PopupModal-{{ block.id }}{{ forloop.index }}" class="popup-modal popup-modal__right" {{ block.shopify_attributes }}>
      <div class="popup-modal__overlay" onclick="this.closest('.popup-modal').close()"></div>
      <div class="popup-modal__content popup-modal__content__f-height">
        <button class="popup-modal__toggle modal-close-animation" type="button" onclick="this.closest('.popup-modal').close()" aria-label="{{ 'accessibility.close' | t }}">
		  {{- 'icon-close' | append: settings.system_icon_thickness | inline_asset_content -}}
        </button>
        <div class="popup-modal__content__data custom__scrollbar" role="dialog" aria-modal="true" tabindex="-1">

          {%- for i in (1..6) -%}
          {%- assign variant_name = "variant_name_" | append: i -%}
          {%- assign variant_name = block.settings[variant_name] -%}
          {%- if option.name == variant_name -%}
          {%- assign heading = "heading_" | append: forloop.index -%}
          {%- assign heading = block.settings[heading] -%}
          {%- assign content = "content_" | append: forloop.index -%}
          {%- assign page = "page_" | append: forloop.index -%}
          {%- if heading != blank -%}
          <div class="popup-modal__content__header pickup-availability-header text-center">
            <h4 class="mt0">{{ heading }}</h4>
          </div>
          {%- endif -%}
          <div class="popup-modal__content__content popup-modal__content__content--padding mt--first-child-0 body2">
            {{ block.settings[content] }}
            {{ block.settings[page].content }}
          </div>
          {%- break -%}
          {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    </modal-dialog>
    {%- endif -%}
    {%- endfor -%}
    {%- endfor -%}

{%- if settings.cart_type != "catalog_mode" -%}
{% assign blocks = section.blocks | where: "type", "buy_buttons" %}
{%- for block in blocks -%}
{%- render "sticky-add-to-cart",
           section: section,
           block: block,
           product: product,
           enable_sticky_addtocart: block.settings.enable_sticky_addtocart           
-%}
{%- endfor -%}
{%- endif -%}

{%- render "product-media-lightbox", product:product, section:section -%}

{%- if first_3d_model -%}
  <script type="application/json" id="ProductJSON-{{ product.id }}">
    {{ product.media | where: 'media_type', 'model' | json }}
  </script>
  <script src="{{ 'product-model.js' | asset_url }}" defer></script>
{%- endif -%}

<script src="{{ 'media-gallery.js' | asset_url }}" defer></script>
</section>

