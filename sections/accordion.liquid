{{ 'component-toggle.css' | asset_url | stylesheet_tag }}

{%- capture section_styles -%}
{%- capture __css -%}
{%- if section.settings.color_base   != "rgba(0,0,0,0)" -%}--color-base-section:{{ section.settings.color_base }};color:{{ section.settings.color_base }};{%- endif -%}
{%- if section.settings.color_accent != "rgba(0,0,0,0)" -%}--color-accent-section:{{ section.settings.color_accent }};{%- endif -%}
{%- if section.settings.color_lines  != "rgba(0,0,0,0)" -%}--color-lines:{{ section.settings.color_lines }};{%- endif -%}
  
{%- if section.settings.color_button_border      != "rgba(0,0,0,0)" -%}
  --color-button-border_main:{{ section.settings.color_button_border }};
  --border-button-width_main:{{ settings.button_border_width_main }}px;
{%- endif -%}
{%- if section.settings.color_button_border_hover!= "rgba(0,0,0,0)" -%}
  --color-button-border-hover_main:{{ section.settings.color_button_border_hover }};
  --border-button-width-hover_main:{{ settings.button_border_width_main }}px;
{%- endif -%}
{%- if section.settings.color_button_text        != "rgba(0,0,0,0)" -%}--color-button-text_main:{{ section.settings.color_button_text }};{%- endif -%}
{%- if section.settings.color_button_text_hover  != "rgba(0,0,0,0)" -%}--color-button-text-hover_main:{{ section.settings.color_button_text_hover }};{%- endif -%}
{%- if section.settings.show_button_bg -%}
{%- if section.settings.color_button_gradient != blank or section.settings.color_button != "rgba(0,0,0,0)" -%}
--color-button-block:{%- if section.settings.color_button_gradient == blank -%}{{ section.settings.color_button }}{%- else -%}{{ section.settings.color_button_gradient }}{%- endif -%};
{%- endif -%}
{%- else -%}
--color-button-block:rgba(0,0,0,0);
{%- endif -%}
{%- if section.settings.show_button_bg_hover -%}
{%- if section.settings.color_button_gradient_hover != blank or section.settings.color_button_hover != "rgba(0,0,0,0)" -%}  
--color-button-hover-block:{%- if section.settings.color_button_gradient_hover == blank -%}{{ section.settings.color_button_hover }}{%- else -%}{{ section.settings.color_button_gradient_hover }}{%- endif -%};
{%- endif -%}
{%- else -%}
--color-button-hover-block:rgba(0,0,0,0);
{%- endif -%}
{%- if section.settings.show_button_bg_hover == false -%}
--color-button-opacity-hover_main:0;
{%- endif -%}
{%- if section.settings.show_shadow_button -%}
{%- if section.settings.color_base != "rgba(0,0,0,0)" or section.settings.color_shadow_button != "rgba(0,0,0,0)" -%}
{%- assign shadow_opacity = settings.shadow_opacity_button_main | divided_by: 100.00 -%}
{%- if section.settings.color_shadow_button != "rgba(0,0,0,0)" -%}{%- assign __color = section.settings.color_shadow_button -%}{%- else -%}{%- assign __color = section.settings.color_base -%}{%- endif -%}
--shadow-button_main: {{ settings.horizontal_length_button_main }}px {{ settings.vertical_length_button_main }}px {{ settings.blur_radius_button_main }}px 0 {{ __color | color_modify: 'alpha', shadow_opacity }};
{%- endif -%}
{%- if section.settings.color_base != "rgba(0,0,0,0)" or section.settings.color_shadow_hover_button != "rgba(0,0,0,0)" -%}
{%- assign shadow_opacity = settings.shadow_opacity_hover_button_main | divided_by: 100.00 -%}
{%- if section.settings.color_shadow_hover_button != "rgba(0,0,0,0)" -%}{%- assign __color = section.settings.color_shadow_hover_button -%}{%- else -%}{%- assign __color = section.settings.color_base -%}{%- endif -%}
--shadow-button-hover_main: {{ settings.horizontal_length_hover_button_main }}px {{ settings.vertical_length_hover_button_main }}px {{ settings.blur_radius_hover_button_main }}px 0 {{ __color | color_modify: 'alpha', shadow_opacity }};
{%- endif -%}
{%- else -%}
--shadow-button_main:none;
--shadow-button-hover_main:none;
{%- endif -%}
{%- endcapture -%}
#theme-section-{{ section.id }}{
  --text-content-width:{{ section.settings.text_content_width }}%;
  --text-content-padding:{{ section.settings.text_content_padding }}px;
  {{ __css }}
}
{%- endcapture -%}
{%- if section_styles != blank -%}
<style>{{ section_styles }}</style>
{%- endif -%}

{%- render "section-css-background", section:section -%}
{%- render "section-component-top-line", section:section -%}
{%- capture page_width -%}{%- if section.settings.width != "default" %}{{ section.settings.width }}{%- else -%}{{ settings.page_width_main }}{%- endif -%}{%- endcapture -%}
{%- assign section_settings_background = false -%}{%- if section.settings.background != 'hide' and section.settings.background_width == "content_width" -%}{%- assign section_settings_background = true -%}{%- endif -%}

<div id="theme-section-{{ section.id }}"
     class="{% if section.settings.show_lines == false or section.settings.background == 'hide' %}top-spacing-{{ section.settings.top_spacing }}{% endif %}{% if section.settings.background != 'hide' and section.settings.background_width == "fullwidth" %} section-background section-background--{{ section.settings.background_spacing }}{% endif %}"
     data-section-name="accordion">
  
  <div class="{{ page_width }}{% if section_settings_background %} section-background--mobile-width{% endif %}">
  {%- if section_settings_background -%}<div class="section-background section-background--{{ section.settings.background_spacing }} border__radius">{%- endif -%}
    {%- if section.settings.background != 'show' and section.settings.show_parallax -%}<div class="section-background__elements"><div class="section-background__elements__item"></div></div>{%- endif -%}
    {%- capture content -%}
    <toggle-component class="{% unless section.settings.disable_accordion %} chm-toggle--accordion{% endunless %}{% if request.design_mode and section.settings.show_all_text_in_admin %} admin-panel--no-js{% endif %}">
      {%- for block in section.blocks -%}
      <details class="chm-toggle"{% if request.design_mode and section.settings.show_all_text_in_admin %} open{% endif %} {{ block.shopify_attributes }}>
        <summary>
          <div class="chm-toggle__button">
            <h5 class="mt0 mb0 chm-toggle__heading">{{ block.settings.heading_text }}</h5>
            <div class="plusminus"></div>
          </div>
        </summary>
        <div class="chm-toggle__content section__richtext__editor">
          {{ block.settings.description }}
          {%- if block.settings.button_name != blank -%}
          <div>
            <a href="{{ block.settings.url }}" class="btn btn__transition-text"
              {% if block.settings.url == blank %} aria-disabled="true"{% endif %}>
              <div class="btn__texts">
                <span class="btn__top-text is-visible">{{ block.settings.button_name }}</span>
                <span class="btn__bottom-text is-hidden">{{ block.settings.button_name }}</span>
              </div>
            </a>
          </div>
          {%- endif -%}
        </div>
      </details>
      {%- endfor -%}
    </toggle-component>
    {%- endcapture -%}

    {%- if section.settings.show_image == 'show' -%}
    {%- capture heading -%}{%- render "section-heading" section:section -%}{%- endcapture -%}
    {%- if heading != blank -%}
    <div class="accordion-mobile-heading">{{ heading }}</div>
    {%- endif -%}
    <section-accordion class="accordion__container align-items-{{ section.settings.align_content }}{% if section.settings.row_reverse %} accordion__container--flip{% endif %}">
      
      <div class="accordion__container__image {% if section.settings.image_hover == "default" %}{{ settings.image_hover }}{% else %}{{ section.settings.image_hover }}{% endif %}">
        <div class="image-hover-box__container{% if section.settings.image_ratio == '1.00' %} image-hover-box--circle{% endif %}">
          {%- assign text_content_width = 100 | minus: section.settings.text_content_width -%}
          {%- assign text_content_width = 100 | times: text_content_width | divided_by: 50 | divided_by: 100.00 -%}
          {%- render "component-image",
              image_ratio_value: section.settings.image_ratio,
              image_source: section.settings.image,
              section_index: section.index
          -%}
        </div>
      </div>
      
      <div class="accordion__container_content">
        {%- if heading != blank -%}
        <div class="accordion-desktop-heading">{{ heading }}</div>
        {%- endif -%}
        {{ content }}
      </div>
    </section-accordion>
    {%- else -%}
    {%- render "section-heading" section:section -%}
    <div class="page-grid-1">
      {{ content }}
    </div>
    {%- endif -%}

    {% if section_settings_background %}</div>{%- endif -%}
  </div>
</div>

