                  {%- if content != blank -%}
                  <div class="blog-posts__container">
                    {{ content }}
                  </div>
                  {%- endif -%}
                </div>
                  
              {%- when 'page' -%}

              <a href="{{ item.url }}" class="card-page clear-underline">
                <div class="badges__container">
                  <span class="badges-item__medium badges-item__search-page">{{ 'templates.search.page' | t }}</span>
                </div>
