<script>
  document.addEventListener("DOMContentLoaded", function(){
    window.addEventListener('resize', loaderOnResize);
    loaderOnResize();
  });
  function loaderOnResize(){
    var facet_filters_form = document.querySelector('.facet-filters-form'),
        product_grid__container = document.querySelector('.product-grid__container');

    var x = Math.round(facet_filters_form.offsetLeft);
    var x2 = Math.round(product_grid__container.offsetLeft);
    
    document.querySelector('.themeloader_container').style.setProperty('--left', x2 + 'px');
    document.querySelector('.themeloader_container').style.setProperty('--right', x + 'px');
  }
</script>
