                      <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                    </svg>
                  </div>
                </div>
              </div>

              <span class="predictive-search-status visually-hidden" role="status" aria-hidden="true"></span>
              {%- endif -%}
              
              <button type="submit" class="search__button field__button field__button__type2" aria-label="{{ 'general.search.search' | t }}">
				{{- 'icon-search' | append: settings.system_icon_thickness | inline_asset_content -}}
              </button>
            </div>
          </form>

        {%- if settings.predictive_search_enabled -%}
        </predictive-search>
        {%- endif -%} 
      </div>
      {%- if search.performed -%}
      {%- unless enable_filtering -%}
      {%- if search.results_count > 0 -%}
      <p class="mt40 mb40 body2 strong" role="status">{{ 'templates.search.results_with_count_and_term' | t: terms: search.terms, count: search.results_count }}</p>
      {%- endif -%}
      {%- endunless -%}
      {%- if search.results_count == 0 and search.filters == empty -%}
      <h4 class="mt40 mb0" role="status">{{ 'templates.search.no_results_heading' | t: terms: search.terms }}</h4>
      <p class="mt16 body2" role="status">{{ 'templates.search.no_results_text' | t }}</p>
      {%- endif -%}
      {%- endif -%}
    </div>

    {%- if search.filters != empty -%}
    {%- if search.filters != empty or enable_products_count_main -%}
    {%- if enable_filtering or enable_products_count_main -%}
    <div class="facets-toolbar mt40 mb0 {{ toolbar__design }}{% if enable_products_count_main == false %} hide-desktop{% endif %}">
      {%- if enable_filtering -%}
      <menu-drawer class="mobile-facets">
        <details id="mobile-facets" class="mobile-facets__disclosure disclosure-has-popup">
          <summary>
            <div class="mobile-facets__button body2 strong">
			  {{- 'icon-filter' | append: settings.system_icon_thickness | inline_asset_content -}}
              <span tabindex="0">
                {{ 'products.facets.filter_button' | t }}
              </span>
            </div>
          </summary>
    
