{%- render "section-css-background", section:section -%}
{%- render "section-component-top-line", section:section -%}
{%- capture page_width -%}{%- if section.settings.width != "default" %}{{ section.settings.width }}{%- else -%}{{ settings.page_width_main }}{%- endif -%}{%- endcapture -%}
{%- assign section_settings_background = false -%}{%- if section.settings.background != 'hide' and section.settings.background_width == "content_width" -%}{%- assign section_settings_background = true -%}{%- endif -%}

<div id="theme-section-{{ section.id }}"
     class="{% if section.settings.show_lines == false or section.settings.background == 'hide' %}top-spacing-{{ section.settings.top_spacing }}{% endif %}{% if section.settings.background != 'hide' and section.settings.background_width == "fullwidth" %} section-background section-background--{{ section.settings.background_spacing }}{% endif %}"
     data-section-name="product-list-with-banner">
  <div class="{{ page_width }}{% if section_settings_background %} section-background--mobile-width{% endif %}">
  {%- if section_settings_background -%}<div class="section-background section-background--{{ section.settings.background_spacing }} border__radius">{%- endif -%}
    {%- if section.settings.background != 'show' and section.settings.show_parallax -%}<div class="section-background__elements"><div class="section-background__elements__item"></div></div>{%- endif -%}
    {%- render "section-heading" section:section -%}

    {%- capture content_banner -%}
    {%- assign banner_blocks = section.blocks | where: "type", "banner" -%}
    {%- for block in banner_blocks -%}
    <div id="theme-block-{{ block.id }}" class="product-list-with-banner__banner {% if section.settings.swipe %}product-list-with-banner{% else %}product-list-with-banner__sticky{% endif %}" {{ block.shopify_attributes }}>
      {%- liquid
          capture placeholder_icon
          cycle 'hero-apparel-1'
          endcapture
          if forloop.index > 1
          assign load_priority_low = 'true'
          endif
      -%}
      {%- render "component-banner-item",
          section:section,
          block:block,
          image_ratio_value: "auto",
          image_ratio_mobile_value: block.settings.image_ratio_mobile,
          placeholder_icon: placeholder_icon,
          load_priority_low: load_priority_low
      -%}
    </div>
    {%- endfor -%}
    {%- endcapture -%}
    {%- assign __collection = section.settings.collection -%}
    {%- capture content -%}
      {%- if __collection != blank -%}
      {%- for product in __collection.products limit: section.settings.product_limit -%}
      {%- if section.settings.swipe -%}<div class="swiper-slide" lazy="true">{%- endif -%}

      {%- render 'product-card',
          customize: section.settings.customize,
          product_card_product: product,
          product_collection:__collection,
          image_ratio_value: section.settings.image_ratio,
          image_hover_type: section.settings.image_hover,
          show_secondary_image: section.settings.image_action,
          show_price:section.settings.show_price,
          show_vendor:section.settings.show_vendor,
          show_type:section.settings.show_type,
          hover_underline:section.settings.hover_underline,
          button_type_product: section.settings.button_type_product,
          show_quantity: section.settings.show_quantity,
          show_badge_sold_out:section.settings.show_badge_sold_out,
          show_badge_on_sale:section.settings.show_badge_on_sale,
          show_badge_feature:section.settings.show_badge_feature,
          show_countdown:section.settings.show_countdown,
          truncate_product_name:section.settings.truncate_product_name,
          show_wishlist: section.settings.show_wishlist,
          show_compare: section.settings.show_compare,
          show_quick_view: section.settings.show_quick_view,
          show_wishlist_mobile: section.settings.show_wishlist_mobile,
          show_compare_mobile: section.settings.show_compare_mobile,
          show_quick_view_mobile: section.settings.show_quick_view_mobile,
          text_aligment: section.settings.text_align,
          show_description: section.settings.show_description,
          enable_rating_product_card: section.settings.enable_rating_product_card
        -%}
        
      {%- if section.settings.swipe -%}</div>{%- endif -%}
      {%- endfor -%}
      {%- else -%}

      {%- for i in (1..section.settings.product_limit) -%}
      {%- if section.settings.swipe -%}<div class="swiper-slide" lazy="true">{%- endif -%}
      {%- capture placeholder_icon -%}
      {%- cycle 'product-apparel-1', 'product-apparel-2', 'product-apparel-3', 'product-apparel-4' -%}
      {%- endcapture -%}
      {%- render 'product-card-placeholder',
          customize: section.settings.customize,
          image_ratio_value: section.settings.image_ratio,
          image_hover_type: section.settings.image_hover,
          show_secondary_image: section.settings.image_action,
          show_price:section.settings.show_price,
          show_vendor:section.settings.show_vendor,
          show_type:section.settings.show_type,
          hover_underline:section.settings.hover_underline,
          button_type_product: section.settings.button_type_product,
          show_quantity: section.settings.show_quantity,
          show_badge_sold_out:section.settings.show_badge_sold_out,
          show_badge_on_sale:section.settings.show_badge_on_sale,
          show_badge_feature:section.settings.show_badge_feature,
          show_countdown:section.settings.show_countdown,
          truncate_product_name:section.settings.truncate_product_name,
          show_wishlist: section.settings.show_wishlist,
          show_compare: section.settings.show_compare,
          show_quick_view: section.settings.show_quick_view,
          show_wishlist_mobile: section.settings.show_wishlist_mobile,
          show_compare_mobile: section.settings.show_compare_mobile,
          show_quick_view_mobile: section.settings.show_quick_view_mobile,
          text_aligment: section.settings.text_align,
          placeholder_icon:placeholder_icon,
          show_description: section.settings.show_description
        -%}
      {%- if section.settings.swipe -%}</div>{%- endif -%}
      {%- endfor -%}

      {%- endif -%}
    {%- endcapture -%}
      
    {%- if section.settings.swipe -%}
    {%- assign data_grid_xl = section.settings.grid | split: "page-grid-" | last -%}
    {%- assign data_grid_lg = section.settings.grid | split: "page-grid-lg-" | last | split: " " | first -%}
    {%- assign data_grid_md = section.settings.grid | split: "page-grid-md-" | last | split: " " | first -%}
    <div class="swiper-no-mask-mobile product-list-with-banner__sidebar{% if section.settings.heading_aligment == "text-center" %} justify-content-center{% endif %}{% if section.settings.row_reverse %} product-list-with-banner__grid__reverse{% endif %}">
      {{ content_banner }}
      <div class="product-list-with-banner__content">
        {%- assign data_tablet_grid_lg = section.settings.grid_tablet_grid_swipe | split: "page-grid-st-" | last -%}
        {%- assign data_grid = 2 | append: "," | append: data_tablet_grid_lg | append: "," | append:data_grid_md | append: "," | append:data_grid_lg | append: "," | append:data_grid_xl -%}
        <swiper-slider class="swiper{% if section.settings.swipe_edges == false %} swiper__custom-mask{% else %}{% if section.settings.row_reverse == true %} swiper-no-mask__left_side-reverse{% else %} swiper-no-mask__left_side{% endif %}{% endif %}"
                      data-swiper-desktop-grid="{{ data_grid_xl }}"
                      data-swiper-desktop-lg-grid="{{ data_grid_lg }}"
                      data-swiper-desktop-md-grid="{{ data_grid_md }}"
                      data-swiper-tablet-grid="{{ data_tablet_grid_lg }}"
                      data-swiper-mobile-grid="2"
                      data-gutter="{{ settings.spacing_grid_horizontal }}"
                      data-gutter-mobile="15"
                      data-grid="{{ data_grid }}"
                      {% if section.settings.autoplay_enabled and request.design_mode == false %} data-autoplay-delay="{{ section.settings.autoplay_time | times: 1000 }}"{% endif %}
                      data-autoplay="{%- if section.settings.autoplay_enabled and request.design_mode == false -%}true{%- else -%}false{%- endif -%}"
                      data-script="{{ 'swiper-bundle.min.js' | asset_url }}"
          >
          <div class="swiper-wrapper swiper-wrapper--max-height">
            {{ content }}
          </div>
        </swiper-slider>
        <div class="swiper-control-container{% if section.settings.heading_aligment == "text-center" %} justify-content-center{% endif %}">
          <div class="custom-swiper-button-prev{% unless section.settings.desktop_navigation contains "arrows" %} hide-desktop{% endunless %}">{{- 'icon-arrow-left' | append: settings.system_icon_thickness | inline_asset_content -}}</div>
          <div class="swiper-pagination{% unless section.settings.desktop_navigation contains "dots" %} hide-desktop{% endunless %}{% unless section.settings.mobile_navigation contains "dots" %} hide-mobile-xl-st{% endunless %}"></div>
          <div class="custom-swiper-button-next{% unless section.settings.desktop_navigation contains "arrows" %} hide-desktop{% endunless %}">{{- 'icon-arrow-right' | append: settings.system_icon_thickness | inline_asset_content -}}</div>
        </div>
      </div>
    </div>
    {%- else -%}
    <div class="product-list-with-banner__sidebar{% if section.settings.row_reverse %} product-list-with-banner__grid__reverse{% endif %}">
      {{ content_banner }}
      <div class="product-list-with-banner__content page-grid-sp-2 {{ section.settings.grid_tablet_grid }} {{ section.settings.grid_grid }} page-vertical-gap-40 {{ section.settings.heading_aligment }}">
        {{ content }}
      </div>
    </div>
    {%- endif -%} 

    {% if section_settings_background %}</div>{%- endif -%}
  </div>
</div>

