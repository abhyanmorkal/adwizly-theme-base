{%- render "section-css-background", section:section -%}
{%- render "section-component-top-line", section:section -%}
{%- capture page_width -%}{%- if section.settings.width != "default" %}{{ section.settings.width }}{%- else -%}{{ settings.page_width_main }}{%- endif -%}{%- endcapture -%}
{%- assign section_settings_background = false -%}{%- if section.settings.background != 'hide' and section.settings.background_width == "content_width" -%}{%- assign section_settings_background = true -%}{%- endif -%}
{%- assign assign last_characters = 'general.abbreviation_of_text_in_a_section.last_characters' | t -%}
<div id="theme-section-{{ section.id }}"
     class="{% if section.settings.show_lines == false or section.settings.background == 'hide' %}top-spacing-{{ section.settings.top_spacing }}{% endif %}{% if section.settings.background != 'hide' and section.settings.background_width == "fullwidth" %} section-background section-background--{{ section.settings.background_spacing }}{% endif %}"
     data-section-name="lookbook">
  <div class="{{ page_width }}{% if section_settings_background %} section-background--mobile-width{% endif %}">
  {%- if section_settings_background -%}<div class="section-background section-background--{{ section.settings.background_spacing }} border__radius">{%- endif -%}
    {%- if section.settings.background != 'show' and section.settings.show_parallax -%}<div class="section-background__elements"><div class="section-background__elements__item"></div></div>{%- endif -%}
    {%- render "section-heading" section:section -%}

    <div class="{% if section.settings.swipe %}grid-lookbook{% else %}page-grid-1{% endif %} lookbook__container">
        {%- liquid
            if forloop.index > 1
            assign load_priority_low = 'true'
            endif
        -%}
        <section-lookbook>
            <div class="lookbook__image-desktop h-full">
                {%- render "component-image",
                    image_ratio_value: "auto",
                    image_source: section.settings.image,
                    section_index: section.index,
                    placeholder_icon: 'hero-apparel-1'
                -%}
            </div>
            <div class="lookbook__image-mobile h-full">
                {%- render "component-image",
                    image_ratio_value: section.settings.image_ratio_mobile,
                    image_source: section.settings.image_mobile,
                    section_index: section.index,
                    placeholder_icon: 'hero-apparel-1'
                -%}
            </div>
            {%- for block in section.blocks -%}
            <lookbook-bullet id="theme-block-{{ block.id }}" {{ block.shopify_attributes }}
                             {% if block.settings.product != blank %}data-product-id="{{ 'product-card-' | append:block.settings.product.id | append: section.id }}"{% endif %}>
              <div class="bullet-product-card__overlay"></div>
              <div class="bullet-product-card hover-area {% if section.settings.image_hover == "default" %}{{ settings.image_hover }}{% else %}{{ section.settings.image_hover }}{% endif %}{% if section.settings.align_content == "center" %} align-items-center{% endif %}">
                <button class="bullet-product-card-close popup-modal__toggle" type="button" aria-label="{{ 'accessibility.close' | t }}">
                    {{- 'icon-close' | append: settings.system_icon_thickness | inline_asset_content -}}
                </button>
                {%- if block.settings.product != blank -%}
                {%- assign product_card = block.settings.product -%}
                {%- if product_card.featured_media != blank -%}
                <a href="{{ product_card.url }}" class="bullet-product-card__image-container">
                    {%- liquid
                        assign image_ratio_value = section.settings.image_ratio_bullet
                        if forloop.index > 1
                        assign load_priority_low = 'true'
                        endif
                    -%}
                    <div class="image-hover-box__container{% if image_ratio_value == '1.00' %} image-hover-box--circle{% endif %}">
                    {%- render "component-image-product-card",
                        image_ratio_value: image_ratio_value,
                        image_source: product_card.featured_media,
                        image_source2: "",
                        show_image_source2: false,
                        load_priority_low: load_priority_low,
                        section_index: section.index
                    -%}
                    </div>
                </a>
                {%- endif -%}
                <div class="bullet-product-card__content mt--first-child-0">
                  {%- if section.settings.show_vendor and product_card.vendor != blank -%}
                  <div class="body3 mt10">
                    <a class="mt0 bullet-product-card__meta link link__base-to_accent-color text-uppercase a--no-hover-color native-hover"
                        href="{{ routes.collections_url }}/all?filter.p.vendor={{ product_card.vendor | escape }}">{{ product_card.vendor }}</a>
                  </div>
                  {%- endif -%}
                  <div class="body2 mt3">
                    <a href="{{ product_card.url }}" class="bullet-product-card__heading heading-color-block-hover a--no-hover-color clear-underline{% if section.settings.hover_underline %} animation-underline{% endif %} native-hover">
                    {%- if section.settings.truncate_product_name -%}
                    {{ product_card.title | escape | truncate: 48,last_characters }}
                    {%- else -%}
                    {{ product_card.title | escape }}
                    {%- endif -%}
                    </a>
                  </div>
                  {%- if section.settings.show_price -%}
                  {%- render 'price', product: product_card -%}
                  {%- endif -%}
                  {%- if settings.enable_rating -%}{%- if section.settings.enable_rating_bullet -%}
                  {%- render 'review-stars' _product: product_card -%}
                  {%- endif -%}{%- endif -%}                    
                </div>
                {%- else -%}
                <div class="bullet-product-card__image-container">
                    {%- liquid
                        assign image_ratio_value = section.settings.image_ratio_bullet
                        capture placeholder_icon
                        cycle 'product-apparel-1', 'product-apparel-2', 'product-apparel-3', 'product-apparel-4'
                        endcapture
                    -%}
                    <div class="image-hover-box__container{% if image_ratio_value == '1.00' %} image-hover-box--circle{% endif %}">
                    {%- render "component-image-product-card",
                        image_ratio_value: image_ratio_value,
                        image_source: "",
                        image_source2: "",
                        show_image_source2: false,
                        load_priority_low: load_priority_low,
                        section_index: section.index,
                        placeholder_icon:placeholder_icon
                    -%}
                    </div>
                </div>
                <div class="bullet-product-card__content mt--first-child-0">
                    {%- if section.settings.show_vendor -%}
                    <div class="body3 mt3">
                        <div class="mt0 bullet-product-card__meta link link__base-to_accent-color text-uppercase a--no-hover-color native-hover">
                            VENDOR
                        </div>
                    </div>
                    {%- endif -%}
                    <div class="body2 mt3">
                        <div class="bullet-product-card__heading heading-color-block-hover a--no-hover-color clear-underline{% if section.settings.hover_underline %} animation-underline{% endif %} native-hover">
                            {{ "Product name" | escape }}
                        </div>
                    </div>
                    {%- if section.settings.show_price -%}
                    <div class="price mt3">
                        <div class="price__regular body3">$12.18{% if settings.currency_code_enabled %} USD{% endif %}</div>
                        <div class="price__sale h5 mt3">From $8.66{% if settings.currency_code_enabled %} USD{% endif %}</div>
                    </div>
                    {%- endif -%}
                  </div>
                {%- endif -%}
                </div>
            </lookbook-bullet>
            {%- endfor -%}
        </section-lookbook>

        {%- if section.settings.swipe -%}
        {%- capture content -%}
        {%- for block in section.blocks -%}
        <div class="swiper-slide" lazy="true">
            {%- if block.settings.product != blank -%}
            {%- render 'lookbook-product-card',
                product_card_product: block.settings.product
                image_ratio_value: section.settings.image_ratio_product,
                image_hover_type: section.settings.image_hover,
                show_secondary_image: section.settings.image_action,
                text_aligment: section.settings.text_align_product_card,
                hover_underline: section.settings.hover_underline_product_card,
                show_vendor: section.settings.show_vendor_product_card,
                show_price: section.settings.show_price_product_card,
                truncate_product_name: section.settings.truncate_product_name_product_card,
                button_type_product: section.settings.button_type_product_product_card,
                show_badge_on_sale: section.settings.show_badge_on_sale_product_card,
                show_badge_sold_out: section.settings.show_badge_sold_out_product_card,
                show_badge_feature: section.settings.show_badge_feature_product_card,
                show_countdown: section.settings.show_countdown_product_card,
                enable_rating_product_card: section.settings.enable_rating_product_card
                -%}
            {%- else -%}
            {%- render 'lookbook-product-card-placeholder',
                product_card_product: block.settings.product
                image_ratio_value: section.settings.image_ratio_product,
                image_hover_type: section.settings.image_hover,
                show_secondary_image: section.settings.image_action,
                text_aligment: section.settings.text_align_product_card,
                hover_underline: section.settings.hover_underline_product_card,
                show_vendor: section.settings.show_vendor_product_card,
                show_price: section.settings.show_price_product_card,
                button_type_product: section.settings.button_type_product_product_card
                -%}
            {%- endif -%}
        </div>
        {%- endfor -%}
        {%- endcapture -%}

        <div class="lookbook__product-card__container swiper-no-mask-mobile{% if section.settings.heading_aligment == "text-center" %} justify-content-center{% endif %}">
            <swiper-slider class="swiper swiper__custom-mask swiper-loop{% if section.settings.desktop_navigation == "none" %} h-d-full{% endif %}"
                            data-swiper-desktop-grid="1"
                            data-swiper-desktop-lg-grid="1"
                            data-swiper-desktop-md-grid="1"
                            data-swiper-tablet-grid="1"
                            data-swiper-mobile-grid="1"
                            data-gutter="{{ settings.spacing_grid_horizontal }}"
                            data-gutter-mobile="15"
                            data-grid="1,1,1,1,1"
                            data-autoplay="false"
                            data-script="{{ 'swiper-bundle.min.js' | asset_url }}"
                >
                <div class="swiper-wrapper">
                {{ content }}
                </div>
            </swiper-slider>
            <div class="swiper-control-container{% if section.settings.heading_aligment == "text-center" %} justify-content-center{% endif %}">
                <div class="custom-swiper-button-prev{% unless section.settings.desktop_navigation contains "arrows" %} hide-desktop{% endunless %}">{{- 'icon-arrow-left' | append: settings.system_icon_thickness | inline_asset_content -}}</div>
                <div class="swiper-pagination{% unless section.settings.desktop_navigation contains "dots" %} hide-desktop{% endunless %}{% unless section.settings.mobile_navigation contains "dots" %} hide-mobile-xl-st{% endunless %}"></div>
                <div class="custom-swiper-button-next{% unless section.settings.desktop_navigation contains "arrows" %} hide-desktop{% endunless %}">{{- 'icon-arrow-right' | append: settings.system_icon_thickness | inline_asset_content -}}</div>
            </div>
        </div>
        {%- endif -%}
    </div>
    {% if section_settings_background %}</div>{%- endif -%}
  </div>
</div>

