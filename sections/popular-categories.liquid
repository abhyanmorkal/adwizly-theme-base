<style>{{ section_styles }}
  .section-popular-categories{
    padding:25px;
    border-radius:var(--radius);
    border:1px solid var(--color-lines);
    display:flex;
    position: relative;
    flex-direction:row;
    gap:20px;
    --image-width:50%;
    height:100%;
    background: var(--color-box-background-block, var(--color-body-background));
  }
  .section-popular-categories .image-hover-box{
    border-radius:var(--radius-image);
  }
  .section-popular-categories__menu{
    flex-grow: 1;
  }
  .section-popular-categories__menu ul{
    margin:-5px 0;
  }
  .section-popular-categories__menu a{
    padding: 5px 0;
  }
  .section-popular-categories__link--big__container ul{
    margin:-6px 0;
  }
  .section-popular-categories__link--big__container a{
    padding: 6px 0;
  }
  .section-popular-categories__link--big__container .h5 {
    font-size: calc(19px * var(--font-heading-scale));
  }
  .section-popular-categories>:first-child:not(:only-child){
    flex: 0 0 var(--image-width);
    height: max-content;
    z-index:1;
  }
  .section-popular-categories>:last-child:not(:only-child){
    flex: 0 0 auto;
    max-width:calc(100% - var(--image-width) - 20px);
    width:100%;
    z-index:1;
  }
  .section-popular-categories.section-popular-categories--reverse{
    flex-direction: row-reverse;
  }
  #theme-section-{{ section.id }} .section-popular-categories{
    --image-width:{{ section.settings.image_width }}%;
  }
  .section-popular-categories__container{
    display:flex;
    flex-direction:column;
    gap:0;
    align-items:flex-start;
  }
  @media (max-width:1024px){
    .section-popular-categories__menu ul{
      margin:-10px 0 -6px;
    }
    .section-popular-categories__menu a{
      padding: 10px 0;
    }
    .section-popular-categories__link--big__container ul{
      margin:-8px;
    }
    .section-popular-categories__link--big__container a{
      padding: 8px 0;
    }
  }
</style>

{%- render "section-css-background", section:section -%}
{%- render "section-component-top-line", section:section -%}
{%- capture page_width -%}{%- if section.settings.width != "default" %}{{ section.settings.width }}{%- else -%}{{ settings.page_width_main }}{%- endif -%}{%- endcapture -%}
{%- assign section_settings_background = false -%}{%- if section.settings.background != 'hide' and section.settings.background_width == "content_width" -%}{%- assign section_settings_background = true -%}{%- endif -%}
<div id="theme-section-{{ section.id }}"
     class="{% if section.settings.show_lines == false or section.settings.background == 'hide' %}top-spacing-{{ section.settings.top_spacing }}{% endif %}{% if section.settings.background != 'hide' and section.settings.background_width == "fullwidth" %} section-background section-background--{{ section.settings.background_spacing }}{% endif %}"
     data-section-name="popular-categories">
  
  <div class="{{ page_width }}{% if section_settings_background %} section-background--mobile-width{% endif %}">
  {%- if section_settings_background -%}<div class="section-background section-background--{{ section.settings.background_spacing }} border__radius">{%- endif -%}
    {%- if section.settings.background != 'show' and section.settings.show_parallax -%}<div class="section-background__elements"><div class="section-background__elements__item"></div></div>{%- endif -%}
    {%- render "section-heading" section:section -%}

    <div class="page-grid-sp-1 {{ section.settings.grid_tablet }} {{ section.settings.grid }}">
    {%- for block in section.blocks -%}
      <div id="theme-block-{{ block.id }}" {{ block.shopify_attributes }}>
        <div class="section-popular-categories{% if section.settings.row_reverse and block.settings.show_icon == 'image' %} section-popular-categories--reverse{% endif %}">

          {%- if block.settings.show_icon == 'image' -%}
          <div class="image-hover-box__container{% if section.settings.image_ratio == '1.00' %} image-hover-box--circle{% endif %}">
            {%- render "component-image",
                image_ratio_value: section.settings.image_ratio,
                image_source: block.settings.image,
                section_index: section.index,
                placeholder_icon: "hero-apparel-1"
            -%}
          </div>
          {%- endif -%}

          <div class="mt--first-child-0 section-popular-categories__container">
            {%- if block.settings.block_heading != blank -%}
            {%- if section.settings.block_size == "big" -%}
            <p class="body2 mt0">{{ block.settings.block_heading }}</p>
            {%- else -%}
            <h5 class="section-popular-categories__heading mt0 heading-color-block-main">{{ block.settings.block_heading }}</h5>
            {%- endif -%}
            {%- endif -%}
            {%- if block.settings.menu != blank -%}
            <div class="mt16 section-popular-categories__menu">
              <ul class="unstyle-ul{% if section.settings.block_size == "big" %} section-popular-categories__link--big__container{% endif %}">
                {%- for link in block.settings.menu.links -%}
                <li class="display-flex">
                  <a href="{{ link.url }}" class="link link--medium link-hover-span link__base-to_accent-color{% if section.settings.block_size == "big" %} h5{% endif %}">
                    {%- if section.settings.link_icon -%}
                    {{- 'icon-arrow-right-small' | append: settings.system_icon_thickness | inline_asset_content -}}
                    {%- endif -%}
                    <span>{{ link.title }}</span>
                  </a>
                </li>
                {%- endfor -%}
              </ul>
            </div>
            {%- endif -%}
            {%- if block.settings.button_name != blank -%}
            <div class="mt16 section-popular-categories__link">
              <a{% if block.settings.url != blank %} href="{{ block.settings.url }}"{% endif %}
                 class="link link-hover-span body3{% if settings.buttons_uppercase %} text-uppercase{% endif %}"
                 {% if block.settings.url == blank %} aria-disabled="true"{% endif %}
                >
                <span>{{ block.settings.button_name }}</span>
                {{- 'icon-arrow-right-small' | append: settings.system_icon_thickness | inline_asset_content -}}
              </a>
            </div>
            {%- endif -%}
          </div>
          
        </div>
      </div>
    {%- endfor -%}
    </div>

    {% if section_settings_background %}</div>{%- endif -%}
  </div>
</div>

