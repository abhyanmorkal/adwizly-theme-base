        "type": "checkbox",
        "id": "show_price",
        "default": true,
		    "label": "Show price"
      },
      {
        "visible_if": "{{ section.settings.customize == true and settings.enable_rating == true }}",
        "type": "checkbox",
        "id": "enable_rating_product_card",
        "default": true,
        "label": "Enable review stars"
