<div id="theme-section-{{ section.id }}"
     class="{% if section.settings.show_lines == false or section.settings.background == 'hide' %}top-spacing-{{ section.settings.top_spacing }}{% endif %}{% if section.settings.background != 'hide' and section.settings.background_width == "fullwidth" %} section-background section-background--{{ section.settings.background_spacing }}{% endif %}"
     data-section-name="featured-collection-tabs">
  <div class="{{ page_width }}{% if section_settings_background %} section-background--mobile-width{% endif %}">
  {%- if section_settings_background -%}<div class="section-background section-background--{{ section.settings.background_spacing }} border__radius">{%- endif -%}
    {%- if section.settings.background != 'show' and section.settings.show_parallax -%}<div class="section-background__elements"><div class="section-background__elements__item"></div></div>{%- endif -%}
    {%- render "section-heading" section:section -%}

    <featured-tabs class="page-grid-1 featured-tabs{% if section.settings.heading_aligment == "text-center" %} featured-tabs--center{% endif %}{% if section.blocks.size <= 1 %} featured-tabs-mb0{% endif %}"
                   data-ajax="featured-collection-tabs-listing_ajax"
                   data-settings="___heading_aligment||{{ section.settings.heading_aligment }}___grid||{{ section.settings.grid | replace: ' ', '--' }}___grid_tablet||{{ section.settings.grid_tablet | replace: ' ', '--' }}___mobile_grid||1___desktop_navigation||{{ section.settings.desktop_navigation }}___mobile_navigation||{{ section.settings.mobile_navigation }}___autoplay_enabled||{{ section.settings.autoplay_enabled }}___autoplay_time||{{ section.settings.autoplay_time }}___align_content||{{ section.settings.align_content }}___image_hover||{{ section.settings.image_hover | replace: ' ', '--' }}___image_ratio||{{ section.settings.image_ratio }}___show_secondary_image||{{ section.settings.show_secondary_image }}___show_vendor||{{ section.settings.show_vendor }}___show_price||{{ section.settings.show_price }}___truncate_product_name||{{ section.settings.truncate_product_name }}___hover_underline||{{ section.settings.hover_underline }}___show_badge_on_sale||{{ section.settings.show_badge_on_sale }}___show_badge_sold_out||{{ section.settings.show_badge_sold_out }}___show_badge_feature||{{ section.settings.show_badge_feature }}___product_limit||{{ section.settings.product_limit }}___customize||{{ section.settings.customize }}___enable_rating_product_card||{{ section.settings.enable_rating_product_card }}___">
        <div class="featured-tabs__container{% if section.blocks.size <= 1 %} hide{% endif %}">
          <div class="featured-tabs__container__content">
            {%- for block in section.blocks -%}
            {%- assign collection_obj = block.settings.collection -%}
            <div class="featured-tabs__item btn btn--tabs{% if forloop.index == 1 %} active{% endif %} btn__transition-text" data-index="{{ forloop.index }}" tabindex="0" role="tab"
                 {% if collection_obj == blank %}
                 data-handle="all"
                 data-settings="placeholder||true___swipe||{{ section.settings.swipe }}___custom_link||{{ block.settings.custom_link }}___link_name||{{ block.settings.link_name }}___"
                 {% else %}
                 data-handle="{{ block.settings.collection.handle }}"
                 data-settings="placeholder||false___swipe||{{ section.settings.swipe }}___custom_link||{{ block.settings.custom_link }}___link_name||{{ block.settings.link_name }}___"
                 {% endif %}
                 >
              <div class="btn__texts">
                <span class="btn__top-text is-visible">{{ block.settings.heading_text }}</span>
                <span class="btn__bottom-text is-hidden">{{ block.settings.heading_text }}</span>
              </div>
            </div>
            {%- endfor -%}
          </div>
        </div>
    </featured-tabs>
    <featured-tabs-content class="display-block"></featured-tabs-content>

    {% if section_settings_background %}</div>{%- endif -%}
  </div>
</div>

