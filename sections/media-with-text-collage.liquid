{{ 'section-media-with-text-collage.css' | asset_url | stylesheet_tag }}
{{ 'component-masonry.css' | asset_url | stylesheet_tag }}
<script src="{{ 'masonry.pkgd.min.js' | asset_url }}" defer="defer"></script>

{%- capture section_styles -%}
{%- capture __css -%}
{%- if section.settings.color_base   != "rgba(0,0,0,0)" -%}--color-base-section:{{ section.settings.color_base }};{%- endif -%}
{%- if section.settings.color_accent != "rgba(0,0,0,0)" -%}--color-accent-section:{{ section.settings.color_accent }};{%- endif -%}
{%- if section.settings.color_lines  != "rgba(0,0,0,0)" -%}--color-lines:{{ section.settings.color_lines }};{%- endif -%}
{%- if section.settings.color_button_border      != "rgba(0,0,0,0)" -%}
  --color-button-border_main:{{ section.settings.color_button_border }};
  --border-button-width_main:{{ settings.button_border_width_main }}px;
{%- endif -%}
{%- if section.settings.color_button_border_hover!= "rgba(0,0,0,0)" -%}
  --color-button-border-hover_main:{{ section.settings.color_button_border_hover }};
  --border-button-width-hover_main:{{ settings.button_border_width_main }}px;
{%- endif -%}
{%- if section.settings.color_button_text        != "rgba(0,0,0,0)" -%}--color-button-text_main:{{ section.settings.color_button_text }};{%- endif -%}
{%- if section.settings.color_button_text_hover  != "rgba(0,0,0,0)" -%}--color-button-text-hover_main:{{ section.settings.color_button_text_hover }};{%- endif -%}
{%- if section.settings.show_button_bg -%}
{%- if section.settings.color_button_gradient != blank or section.settings.color_button != "rgba(0,0,0,0)" -%}
--color-button-block:{%- if section.settings.color_button_gradient == blank -%}{{ section.settings.color_button }}{%- else -%}{{ section.settings.color_button_gradient }}{%- endif -%};
{%- endif -%}
{%- else -%}
--color-button-block:rgba(0,0,0,0);
{%- endif -%}
{%- if section.settings.show_button_bg_hover -%}
{%- if section.settings.color_button_gradient_hover != blank or section.settings.color_button_hover != "rgba(0,0,0,0)" -%}  
--color-button-hover-block:{%- if section.settings.color_button_gradient_hover == blank -%}{{ section.settings.color_button_hover }}{%- else -%}{{ section.settings.color_button_gradient_hover }}{%- endif -%};
{%- endif -%}
{%- else -%}
--color-button-hover-block:rgba(0,0,0,0);
{%- endif -%}
{%- if section.settings.show_button_bg_hover == false -%}
--color-button-opacity-hover_main:0;
{%- endif -%}
{%- if section.settings.show_shadow_button -%}
{%- if section.settings.color_base != "rgba(0,0,0,0)" or section.settings.color_shadow_button != "rgba(0,0,0,0)" -%}
{%- assign shadow_opacity = settings.shadow_opacity_button_main | divided_by: 100.00 -%}
{%- if section.settings.color_shadow_button != "rgba(0,0,0,0)" -%}{%- assign __color = section.settings.color_shadow_button -%}{%- else -%}{%- assign __color = section.settings.color_base -%}{%- endif -%}
--shadow-button_main: {{ settings.horizontal_length_button_main }}px {{ settings.vertical_length_button_main }}px {{ settings.blur_radius_button_main }}px 0 {{ __color | color_modify: 'alpha', shadow_opacity }};
{%- endif -%}
{%- if section.settings.color_base != "rgba(0,0,0,0)" or section.settings.color_shadow_hover_button != "rgba(0,0,0,0)" -%}
{%- assign shadow_opacity = settings.shadow_opacity_hover_button_main | divided_by: 100.00 -%}
{%- if section.settings.color_shadow_hover_button != "rgba(0,0,0,0)" -%}{%- assign __color = section.settings.color_shadow_hover_button -%}{%- else -%}{%- assign __color = section.settings.color_base -%}{%- endif -%}
--shadow-button-hover_main: {{ settings.horizontal_length_hover_button_main }}px {{ settings.vertical_length_hover_button_main }}px {{ settings.blur_radius_hover_button_main }}px 0 {{ __color | color_modify: 'alpha', shadow_opacity }};
{%- endif -%}
{%- else -%}
--shadow-button_main:none;
--shadow-button-hover_main:none;
{%- endif -%}
{%- if section.settings.color_desc  != "rgba(0,0,0,0)" -%}--color-text:{{ section.settings.color_desc }};{%- endif -%}
{%- if section.settings.color_text_link != "rgba(0,0,0,0)" -%}--color-heading-link-block:{{ section.settings.color_text_link }};{%- endif -%}
{%- if section.settings.color_text_link_hover != "rgba(0,0,0,0)" -%}--color-heading-hover-block:{{ section.settings.color_text_link_hover }};{%- endif -%}
{%- if section.settings.color_text_icons != "rgba(0,0,0,0)" -%}--color-text-icons-block:{{ section.settings.color_text_icons }};{%- endif -%}
{%- if section.settings.color_counter != "rgba(0,0,0,0)" -%}--color-counter:{{ section.settings.color_counter }};{%- endif -%}
{%- if section.settings.color_secondary_background != "rgba(0,0,0,0)" -%}--color-secondary-background:{{ section.settings.color_secondary_background }};{%- endif -%}
{%- endcapture -%}
 #theme-section-{{ section.id }}{
  --text-content-width:{{ section.settings.text_content_width }}%;
  {{ __css }}
}
{%- endcapture -%}
<style>{{ section_styles }}
#theme-section-{{ section.id }}{
  --icon-image-width: {{ section.settings.icon_width }}px;
}
#theme-section-{{ section.id }} .section-media-icon svg{
  width: {{ section.settings.icon_width }}px;
  height: {{ section.settings.icon_width }}px;
}
</style>
{%- render "section-css-background", section:section -%}
{%- render "section-component-top-line", section:section -%}
{%- capture page_width -%}{%- if section.settings.width != "default" %}{{ section.settings.width }}{%- else -%}{{ settings.page_width_main }}{%- endif -%}{%- endcapture -%}
{%- assign section_settings_background = false -%}{%- if section.settings.background != 'hide' and section.settings.background_width contains "content_width" -%}{%- assign section_settings_background = true -%}{%- endif -%}

<div id="theme-section-{{ section.id }}"
     class="{% if section.settings.show_lines == false or section.settings.background == 'hide' %}top-spacing-{{ section.settings.top_spacing }}{% endif %}{% if section.settings.background != 'hide' and section.settings.background_width == "fullwidth" %} section-background section-background--{{ section.settings.background_spacing }}{% endif %}"
     data-section-name="media-with-text-collage">
  
  <div class="{{ page_width }}{% if section_settings_background %} section-background--mobile-width{% endif %}">
  {%- if section_settings_background -%}<div class="section-background section-background--{{ section.settings.background_spacing }} border__radius">{%- endif -%}
    {%- if section.settings.background != 'show' and section.settings.show_parallax -%}<div class="section-background__elements"><div class="section-background__elements__item"></div></div>{%- endif -%}
    {%- capture content -%}
      {%- for block in section.blocks -%}
      {%- case block.type -%}
      {%- when "heading" -%}
      <div class="mt16 section-media-block-heading mt--first-child-0">
        {%- if block.settings.main_subheading != blank -%}<h5 class="mt0 mb0 accent-color">{{ block.settings.main_subheading }}</h5>{%- endif -%}
        {%- if block.settings.main_heading != blank -%}
        {%- if section.settings.url == blank -%}
        <h2 class="mt16 mb0 section-media-block__heading heading-color-block-main">{{ block.settings.main_heading }}</h2>
        {%- else -%}
        <h2 class="mt16 mb0 section-media-block__heading">
        <a href="{{ section.settings.url }}" class="clear-underline heading-color-block-hover{% if section.settings.hover_underline %} animation-underline{% endif %} a--no-hover-color">
          {{ block.settings.main_heading }}
        </a>
        </h2>
        {%- endif -%}                                           
        {%- endif -%}
      </div>
      {%- when "richtext" -%}
      <div class="mt16 section-media-block-content{% if section.settings.align_text == "center" %} section-media-block-content-center{% endif %} mt--first-child-0">
        {%- capture icon_content -%}
        {%- render "component-image-icon",
            show_icon: block.settings.show_icon,
            image: block.settings.image,
            icon: block.settings.icon_name,
            image_custom_width: section.settings.icon_width
        -%}
        {%- endcapture -%}
        {%- if icon_content != blank -%}
        <div class="section-media-icon">
          {{ icon_content }}
        </div>
        {%- endif -%}
        {%- if block.settings.block_text != blank -%}<div class="section__richtext__editor">{{ block.settings.block_text }}</div>{%- endif -%}
      </div>
      {%- when "button" -%}
      {%- if block.settings.button_name != blank -%}
      <div class="section-media-block-button mt30">
        <a href="{{ section.settings.url }}" class="btn btn__transition-text btn-wide2"
          {% if block.settings.customize_button_size=="custom" %} style="--button-height:{{ block.settings.btn_min_height }}px;--button-height-mob:{{ block.settings.btn_min_height_mobile }}px;--button-width-wide:{{ block.settings.btn_wide_width }}px;--radius-button:{{ block.settings.roundness_button }}px"{% endif %}
          {% if section.settings.url == blank %} aria-disabled="true"{% endif %}>
          <div class="btn__texts">
            <span class="btn__top-text is-visible">{{ block.settings.button_name }}</span>
            <span class="btn__bottom-text is-hidden">{{ block.settings.button_name }}</span>
          </div>
        </a>
      </div>
      {%- endif -%}
      {%- when "countdown" -%}

      <countdown-timer class="mt10 countdown-timer" data-end-date="{{ block.settings.year }},{{ block.settings.month | minus:1 }},{{ block.settings.day }},{{ block.settings.hours }},{{ block.settings.minutes }},{{ block.settings.seconds }}">
        <style class="hide">
          .countdown-timer{
            display:grid;
            --column:minmax(40px, 70px);
            --colgap:20px;
            grid-template-columns: var(--column) var(--colgap) var(--column) var(--colgap) var(--column) var(--colgap) var(--column);
            margin:30px 0;
          }
          .countdown-timer > *{
            display: flex;
            justify-content: center;
            align-items: center;
          }
          .countdown-timer_item{
            white-space: nowrap;
            aspect-ratio:1;
            background:var(--color-secondary-background);
            border-radius:var(--radius-image);
          }
          .text-center .countdown-timer{
            justify-content:center;
          }
          .countdown-timer_item .h2{
            font-size:40px;
          }
          .countdown-timer_item [class*="countdown-timer__item__"]{
            color:var(--color-counter, var(--color-base-section, var(--color-heading-main)));
          }
          .countdown-timer_item_colon svg path{
            fill:var(--color-text, var(--color-base-section, var(--color-base)));
          }
          @media (max-width:576px){
            .countdown-timer_item .h2{
              font-size:36px;
            }
          }
        </style>
        <div class="countdown-timer_item">
          <p class="countdown-timer__item__days h2 mt0 mb0">0</p>
        </div>
        <div class="countdown-timer_item_colon">
          {{- 'icon-colon' | append: settings.system_icon_thickness | inline_asset_content -}}
        </div>
        <div class="countdown-timer_item">
          <p class="countdown-timer__item__hours h2 mt0 mb0">0</p>
        </div>
        <div class="countdown-timer_item_colon">
          {{- 'icon-colon' | append: settings.system_icon_thickness | inline_asset_content -}}
        </div>
        <div class="countdown-timer_item">
          <p class="countdown-timer__item__minutes h2 mt0 mb0">0</p>
        </div>
        <div class="countdown-timer_item_colon">
          {{- 'icon-colon' | append: settings.system_icon_thickness | inline_asset_content -}}
        </div>
        <div class="countdown-timer_item">
          <p class="countdown-timer__item__seconds h2 mt0 mb0">0</p>
        </div>
      </countdown-timer>
        
      {%- endcase -%}
      {%- endfor -%}
      
    {%- endcapture -%}

    {%- capture image_content -%}
    {%- assign _content = section.blocks | where: "type", "media" -%}
    {%- for block in _content -%}
    <div class="section-media-block__container__image {% if block.settings.image_hover == "default" %}{{ settings.image_hover }}{% else %}{{ block.settings.image_hover }}{% endif %}">
      <div class="image-hover-box__container{% if block.settings.image_ratio == '1.00' %} image-hover-box--circle{% endif %}">

        {%- render "component-image",
            image_ratio_value: block.settings.image_ratio,
            image_source: block.settings.image,
            section_index: section.index,
            placeholder_icon: "hero-apparel-1"
        -%}

      </div>
    </div>
    {%- endfor -%}
    {%- endcapture -%}

    <div class="media-with-text-collage__container align-items-{{ section.settings.align_content }} media-with-text-collage__align-{{ section.settings.align_content_text }}">
      {%- assign image_count = section.settings.image_count | divided_by: 2 -%}
      {%- if section.settings.align_content_text == "center" -%}
      {%- if section.settings.image_count == 6 -%}
      <div class="media-with-text-collage__container__image page-grid-sp-2 page-grid-st-3 page-grid-2">
        {%- assign images = 1 -%}
        {% for i in (1..image_count) %}
        {%- liquid
            assign image_src = 'image_0' | append:images
            assign image_src = section.settings[image_src]
            capture placeholder_icon
            cycle 'hero-apparel-1', 'hero-apparel-2'
            endcapture
            assign images = images | plus:1
        -%}
        <div class="{% if section.settings.image_hover == "default" %}{{ settings.image_hover }}{% else %}{{ section.settings.image_hover }}{% endif %}">
          <div class="image-hover-box__container{% if section.settings.image_ratio == '1.00' %} image-hover-box--circle{% endif %}">
            {%- render "component-image",
                image_ratio_value: section.settings.image_ratio,
                image_source: image_src,
                section_index: section.index,
                placeholder_icon: placeholder_icon
            -%}
          </div>
        </div>
        {%- endfor -%}
      </div>
      {%- else -%}
      {%- liquid
          if image_count == 2
          assign data_items = 2
          elsif image_count == 1
          assign data_items = 1
          else
          assign data_items = image_count | divided_by: 2 | at_least: 1
          endif
      -%}
      <masonry-items class="media-with-text-collage__container__image page-grid-sp-{% if image_count == 1 %}1{% else %}2{% endif %} page-grid-st-{{ image_count }} page-grid-{{ data_items }}" data-items="{{ data_items }}" data-gutter="10" data-mobile="true">
        {%- assign images = 1 -%}
        {% for i in (1..image_count) %}
        {%- liquid
            assign image_src = 'image_0' | append:images
            assign image_src = section.settings[image_src]
            capture placeholder_icon
            cycle 'hero-apparel-1', 'hero-apparel-2'
            endcapture
            assign images = images | plus:1
        -%}
        <div class="{% if forloop.first %}wokiee-masonry-grid-sizer {% endif %}wokiee-masonry__item {% if section.settings.image_hover == "default" %}{{ settings.image_hover }}{% else %}{{ section.settings.image_hover }}{% endif %}">
          <div class="image-hover-box__container{% if section.settings.image_ratio == '1.00' %} image-hover-box--circle{% endif %}">
            {%- render "component-image",
                image_ratio_value: section.settings.image_ratio,
                image_source: image_src,
                section_index: section.index,
                placeholder_icon: placeholder_icon
            -%}
          </div>
        </div>
        {%- endfor -%}
      </masonry-items>
      {%- endif -%}
      {%- else -%}
      {%- assign image_count = section.settings.image_count -%}
      <masonry-items class="media-with-text-collage__container__image page-grid-sp-{% if image_count == 6 %}3{% else %}2{% endif %} page-grid-st-{{ image_count | divided_by: 2 }} page-grid-{{ image_count | divided_by: 2 }}" data-items="{{ image_count | divided_by: 2 | at_least: 2  }}" data-gutter="10" data-mobile="true">
        {%- assign images = 1 -%}
        {% for i in (1..image_count) %}
        {%- liquid
            assign image_src = 'image_0' | append:images
            assign image_src = section.settings[image_src]
            capture placeholder_icon
            cycle 'hero-apparel-1', 'hero-apparel-2'
            endcapture
            assign images = images | plus:1
        -%}
        <div class="{% if forloop.first %}wokiee-masonry-grid-sizer {% endif %}wokiee-masonry__item {% if section.settings.image_hover == "default" %}{{ settings.image_hover }}{% else %}{{ section.settings.image_hover }}{% endif %}">
          <div class="image-hover-box__container{% if section.settings.image_ratio == '1.00' %} image-hover-box--circle{% endif %}">
            {%- render "component-image",
                image_ratio_value: section.settings.image_ratio,
                image_source: image_src,
                section_index: section.index,
                placeholder_icon: placeholder_icon
            -%}
          </div>
        </div>
        {%- endfor -%}
      </masonry-items>
      {%- endif -%}

      <div class="media-with-text-collage__container_content mt--first-child-0 mb--last-child-0 {{ section.settings.text_align }}">
        {{ content }}
      </div>

      {%- if section.settings.align_content_text == "center" -%}
      {%- assign image_count = section.settings.image_count | divided_by: 2 -%}
      {%- if section.settings.image_count == 6 -%}
      <div class="media-with-text-collage__container__image page-grid-sp-2 page-grid-st-3 page-grid-2">
        {%- for i in (images..section.settings.image_count) -%}
        {%- liquid
            assign image_src = 'image_0' | append:images
            assign image_src = section.settings[image_src]
            capture placeholder_icon
            cycle 'hero-apparel-1', 'hero-apparel-2'
            endcapture
            assign images = images | plus:1
        -%}
        <div class="{% if section.settings.image_hover == "default" %}{{ settings.image_hover }}{% else %}{{ section.settings.image_hover }}{% endif %}">
          <div class="image-hover-box__container{% if section.settings.image_ratio == '1.00' %} image-hover-box--circle{% endif %}">
            {%- render "component-image",
                image_ratio_value: section.settings.image_ratio,
                image_source: image_src,
                section_index: section.index,
                placeholder_icon: placeholder_icon
            -%}
          </div>
        </div>
        {%- endfor -%}
      </div>
      {%- else -%}
      {%- liquid
          if image_count == 2
          assign data_items = 2
          elsif image_count == 1
          assign data_items = 1
          else
          assign data_items = image_count | divided_by: 2 | at_least: 1
          endif
      -%}
      <masonry-items class="media-with-text-collage__container__image page-grid-sp-{% if image_count == 1 %}1{% else %}2{% endif %} page-grid-st-{{ image_count }} page-grid-{{ data_items }}" data-items="{{ data_items }}" data-gutter="10" data-mobile="true">
        {%- for i in (images..section.settings.image_count) -%}
        {%- liquid
            assign image_src = 'image_0' | append:images
            assign image_src = section.settings[image_src]
            capture placeholder_icon
            cycle 'hero-apparel-1', 'hero-apparel-2'
            endcapture
            assign images = images | plus:1
        -%}
        <div class="{% if forloop.first %}wokiee-masonry-grid-sizer {% endif %}wokiee-masonry__item {% if section.settings.image_hover == "default" %}{{ settings.image_hover }}{% else %}{{ section.settings.image_hover }}{% endif %}">
          <div class="image-hover-box__container{% if section.settings.image_ratio == '1.00' %} image-hover-box--circle{% endif %}">
            {%- render "component-image",
                image_ratio_value: section.settings.image_ratio,
                image_source: image_src,
                section_index: section.index,
                placeholder_icon: placeholder_icon
            -%}
          </div>
        </div>
        {%- endfor -%}
      </masonry-items>
      {%- endif -%}
      {%- endif -%}
    </div>

    {% if section_settings_background %}</div>{%- endif -%}
  </div>
</div>

{% schema %}
  {
    "name": "t:names.media_with_text_collage",
  	"tag": "section",
    "disabled_on": {
      "groups": ["header","footer","custom.popups"]
    },
    "settings": [
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "select",
        "id": "top_spacing",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "small",
            "label": "Small"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "normal",
            "label": "Normal"
          }
        ],
        "default": "normal",
        "label": "Top spacing"
      },
      {
        "type": "select",
        "id": "width",
        "options": [
          {
            "value": "default",
            "label": "Default"
          },
          {
            "value": "page-width",
            "label": "Boxed"
          },
          {
            "value": "page-wide",
            "label": "Wide"
          }
        ],
        "default": "default",
        "label": "Width",
        "info": "The Wide option works for screens with 1440px width and more."
      },
      {
        "type": "select",
        "id": "align_content_text",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left",
        "label": "Text content position"
      },
      {
        "type": "header",
        "content": "Images"
      },
      {
        "type": "range",
        "id": "image_count",
        "min": 2,
        "max": 8,
        "step": 2,
        "label": "Images",
        "default": 8
      },
      {
        "type": "select",
        "id": "image_hover",
        "options": [
            {
                "value": "default",
                "label": "Basic theme settings"
            },
            {
                "value": "image-hover-none",
                "label": "Disable"
            },
            {
                "value": "image-hover01",
                "label": "Zoom in #1"
            },
            {
                "value": "image-hover01 image-hover01-rotate",
                "label": "Zoom in and rotate"
            },
            {
                "value": "image-hover02",
                "label": "Zoom in #2"
            },
            {
                "value": "image-hover03",
                "label": "Zoom out #1"
            },
            {
                "value": "image-hover04",
                "label": "Zoom out #2"
            },
            {
                "value": "image-hover05",
                "label": "Slide"
            },
            {
                "value": "image-hover06",
                "label": "Shine"
            }
        ],
            "default": "default",
            "label": "Image hover effect"
        },
        {
            "type": "select",
            "id": "image_ratio",
            "options": [
            {
                "value": "auto",
                "label": "Auto"
            },
            {
                "value": "0.75",
                "label": "Portrait (3:4)"
            },
            {
                "value": "1.333333",
                "label": "Landscape (4:3)"
            },
            {
                "value": "1",
                "label": "Square (1:1)"
            },
            {
                "value": "1.00",
                "label": "Round (1:1)"
            },
            {
                "value": "0.5625",
                "label": "Social story (9:16)"
            },
            {
                "value": "1.777777",
                "label": "Widescreen (16:9)"
            }
        ],
        "default": "auto",
        "label": "Image ratio"
      },
      {
        "type": "image_picker",
        "id": "image_01",
        "label": "Image 1"
