<style>
  .icons__container{
    display: grid;
    grid-template-columns: repeat(var(--page-grid-value), 1fr);
    align-content: flex-start;
    gap:10px;
  }
  @media (min-width: 1600px){
    .icons__container{
      --page-grid-value:14;
    }
  }
  @media (min-width: 1360px) and (max-width: 1599px){
    .icons__container{
      --page-grid-value:12;
    }
  }
  @media (max-width: 1359px){
    .icons__container{
      --page-grid-value:10;
    }
  }
  @media (max-width: 1024px){
    .icons__container{
      --page-grid-value:8;
    }
  }
  @media (max-width: 576px){
    .icons__container{
      --page-grid-value:3;
    }
  }
  
  .icons__item{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    background: rgba(var(--color-base-rgb), .05);
    flex: 0 0 auto;
    border-radius: 10px;
    cursor: copy;
    transition: all var(--duration-medium) var(--animation-bezier);
    word-break: break-all;
    text-align:center;
    padding:15px 10px;
    position:relative;
    overflow:hidden;
  }
  .icons__item__icon_copied{
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    background:var(--color-base);
    color:var(--color-body-background);
    opacity:0;
    transition: all var(--duration-medium) var(--animation-bezier);
  }
  .icons__item--progress .icons__item__icon_copied{
    opacity:1;
  }
  .icons__item .icons__item__icon_copied svg path{
    fill:var(--color-body-background);
  }
  
  .icons__item:hover{
    color:var(--color-accent);
  }
  .icons__item svg path{
    transition: all var(--duration-medium) var(--animation-bezier);
  }
  .icons__item:hover>.icons__item__icon svg path{
    fill:var(--color-accent);
  }
  .icons__item *{
    pointer-events: none;
  }
  .icons__item__icon{
    display: flex;
    justify-content: center;
    align-items: center;
    min-width: 40px;
    min-height: 40px;
  }
  .icons__item__icon svg{
    width: 30px;
    height: 30px;
  }
  .icons__item span{
    margin-top: 10px;
  }
</style>
