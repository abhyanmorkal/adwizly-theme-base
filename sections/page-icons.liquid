<script>
  var icons = document.querySelectorAll('.icons__item');
  icons.forEach(icon => {
    icon.addEventListener("click", copy_password);
  })
  function copy_password() {
    var copyText = this.querySelector('span'),
    	textArea = document.createElement("textarea"),
    	item = this;
    textArea.value = copyText.textContent;
    document.body.appendChild(textArea);
    textArea.select();
    document.execCommand("Copy");
    textArea.remove();
    
    item.classList.add('icons__item--progress');
    setTimeout(function(){item.classList.remove('icons__item--progress');}, 500);
  }
</script>

