{%- liquid
    assign image_ratio_value = section.settings.image_size
    if section.settings.image_size == "fixed"
    assign image_ratio_value = "auto"
    elsif section.settings.image_size == "fullscreen"
    assign image_ratio_value = "auto"
    endif
-%}

{%- render "section-component-top-line", section:section -%}
{%- if section.settings.image_size == 'fullscreen' or section.settings.image_size_mobile == 'fullscreen' -%}<fullscreen-object-collage class="section-slider__fullscreen display-block"{% if section.settings.image_size == 'fullscreen' %} data-desktop="true" data-tablet="true"{% endif %}{% if section.settings.image_size_mobile == 'fullscreen' %} data-mobile="true"{% endif %}>{%- endif -%}
{%- capture page_width -%}{%- if section.settings.width != "default" %}{{ section.settings.width }}{%- else -%}{{ settings.page_width_main }}{%- endif -%}{%- endcapture -%}
{%- if section.settings.show_lines -%}
<div class="top-spacing-{{ section.settings.top_spacing }}"></div>
{%- if section.settings.lines_width == "content_width" %}<div class="{{ page_width }} background__page-padding0">{% endif -%}
    <div id="theme-section-{{ section.id }}-line" class="background__horizontal-line"></div>
{%- if section.settings.lines_width == "content_width" %}</div>{% endif -%}
{%- endif -%}
<div id="theme-section-{{ section.id }}"
     class="{% if section.settings.show_lines == false %}top-spacing-{{ section.settings.top_spacing }}{% endif %}"
     data-section-name="slider">
  <div class="{{ page_width }} section-slider__container">
    <div class="page-grid-1 section-slider__container__page">

        {%- capture content -%}
            {%- for block in section.blocks -%}
            <div class="swiper-slide"{% unless forloop.first %} lazy="true"{% endunless %}>
            <div id="theme-block-{{ block.id }}" {{ block.shopify_attributes }}>
                {%- liquid
                    capture placeholder_icon
                    cycle 'hero-apparel-1', 'hero-apparel-2'
                    endcapture
                    if forloop.index <= 3
                    assign load_priority_low = 'auto'
                    else
                    assign load_priority_low = 'true'
                    endif
                -%}
                {%- liquid
                    if block.settings.image_ratio_mobile == "default"
                    assign image_ratio_mobile_value = section.settings.image_ratio_mobile
                    else
                    assign image_ratio_mobile_value = block.settings.image_ratio_mobile
                    endif
                -%}
                {%- render "component-banner-item-slider",
                    section:section,
                    block:block,
                    image_ratio_value: image_ratio_value,
                    image_ratio_mobile_value: image_ratio_mobile_value,
                    placeholder_icon: placeholder_icon,
                    load_priority_low: load_priority_low
                -%}
            </div>
            </div>
            {%- endfor -%}
        {%- endcapture -%}
        <section-slider class="section-slider">
            <div class="no-row-gap">
                {%- liquid
                    assign desk_nav = section.settings.desktop_navigation
                    assign mob_nav = section.settings.mobile_navigation
                    assign dots_al_desk = section.settings.dots_alignment_desktop
                    assign arr_al_desk = section.settings.arrows_alignment_desktop
                    assign dots_al_mob = section.settings.dots_alignment_mobile
                -%}
                <main-slider class="swiper swiper-loop{% if desk_nav contains "arrows" %} slider__arrows-aligment__desktop--{{ arr_al_desk }}{% endif %} slider__dots-aligment__desktop--{{ dots_al_desk }} slider__dots-aligment__mobile--{{ dots_al_mob }}"
                               data-effect="{{ section.settings.transition_effect }}"
                               {% if page_width =="page-fullwidth" %}data-gutter="0"{% else %}data-gutter="10"{% endif %}
                               data-gutter-mobile="15"
                               data-grid="1,1,1,1,1"
                               data-speed="300"
                               {% if section.settings.autoplay_enabled and request.design_mode == false %} data-autoplay-delay="{{ section.settings.autoplay_time | times: 1000 }}"{% endif %}
                               data-autoplay="{%- if section.settings.autoplay_enabled and request.design_mode == false -%}true{%- else -%}false{%- endif -%}"
                               data-script="{{ 'swiper-bundle.min.js' | asset_url }}"
                    >
                    <div class="swiper-wrapper">
                    {{ content }}
                    </div>
                    <div class="internal-swiper-button-prev{% unless desk_nav contains "arrows" %} hide-desktop{% endunless %}{% unless mob_nav contains "arrows" %} hide-mobile-xl-st{% endunless %}">{{- 'icon-arrow-left' | append: settings.system_icon_thickness | inline_asset_content -}}</div>
                    <div class="internal-swiper-button-next{% unless desk_nav contains "arrows" %} hide-desktop{% endunless %}{% unless mob_nav contains "arrows" %} hide-mobile-xl-st{% endunless %}">{{- 'icon-arrow-right' | append: settings.system_icon_thickness | inline_asset_content -}}</div>
                    <div class="swiper-pagination{% unless desk_nav contains "dots" %} hide-desktop{% endunless %}{% unless mob_nav contains "dots" %} hide-mobile-xl-st{% endunless %}"></div>
                </main-slider>
            </div>
            {%- if section.settings.show_logo -%}

            <div class="slider-logo">
                {%- assign logo_svg = section.settings.logo_svg -%}
                {%- assign image_src = section.settings.logo -%}
                {%- assign logo_max_width = section.settings.logo_max_width -%}
                {%- assign logo_max_width_mobile = section.settings.logo_max_width_mobile -%}
                {%- if logo_svg != blank -%}
                <div class="slider-logo--svg" style="--width:{{ logo_max_width }}%;--width-m:{{ logo_max_width_mobile }}%;">{{ logo_svg }}</div>
                {%- elsif image_src != blank -%}
                {%- assign image_size = section.settings.logo.width -%}
                <img src="{{ image_src | image_url: width: image_size }}"
                    class="slider-logo--image w-full"
                    alt="{{ image_src.alt | default: shop.name | escape }}"
                    style="--width:{{ logo_max_width }}%;--width-m:{{ logo_max_width_mobile }}%;"
                    width="{{ image_size }}"
                    height="{{ section.settings.logo.height }}"
                    loading="lazy"
                    >
                {%- endif -%}
            </div>
      {%- endif -%}
        </section-slider>
    </div>

  </div>
</div>
{%- if section.settings.image_size == 'fullscreen' -%}</fullscreen-object-collage>{%- endif -%}

{% schema %}
{
