{%- liquid
    assign body_font_bold = settings.type_body_font | font_modify: 'weight', 'bold'
    assign body_font_italic = settings.type_body_font | font_modify: 'style', 'italic'
    assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'

    assign google_font_str = ""
    assign google_font_name_body = ""
    if settings.body_font_type == "google"
    assign google_font_name_body = settings.google_font_name_body
   
    assign google_font_weight_body = settings.google_font_weight_body | plus: 0
    assign google_font_weight_body_bold = settings.google_font_weight_body_bold | plus: 0
    assign google_font_weight_heading = settings.google_font_weight_heading | plus: 0

    if google_font_weight_body == google_font_weight_body_bold
    assign google_font_str = "family=FN:ital,wght@0,W1;1,W1"
    elsif google_font_weight_body > google_font_weight_body_bold
    assign google_font_str = "family=FN:ital,wght@0,W2;0,W1;1,W2;1,W1"
    else
    assign google_font_str = "family=FN:ital,wght@0,W1;0,W2;1,W1;1,W2"
    endif

    if settings.heading_font_type == "google" and google_font_name_body == settings.google_font_name_heading
    if google_font_weight_body != google_font_weight_heading and google_font_weight_body_bold != google_font_weight_heading
    if google_font_weight_heading < google_font_weight_body and google_font_weight_heading < google_font_weight_body_bold
    assign google_font_str = google_font_str | replace:"family=FN:ital,wght@0,W1;1,W1", "family=FN:ital,wght@0,W3;0,W1;1,W3;1,W1"
    assign google_font_str = google_font_str | replace:"family=FN:ital,wght@0,W2;0,W1;1,W2;1,W1", "family=FN:ital,wght@0,W3;0,W2;0,W1;1,W3;1,W2;1,W1"
    assign google_font_str = google_font_str | replace:"family=FN:ital,wght@0,W1;0,W2;1,W1;1,W2", "family=FN:ital,wght@0,W3;0,W1;0,W2;1,W3;1,W1;1,W2"
    elsif google_font_weight_heading > google_font_weight_body and google_font_weight_heading > google_font_weight_body_bold
    assign google_font_str = google_font_str | replace:"family=FN:ital,wght@0,W1;1,W1", "family=FN:ital,wght@0,W1;0,W3;1,W1;1,W3"
    assign google_font_str = google_font_str | replace:"family=FN:ital,wght@0,W2;0,W1;1,W2;1,W1", "family=FN:ital,wght@0,W2;0,W1;0,W3;1,W2;1,W1;1,W3"
    assign google_font_str = google_font_str | replace:"family=FN:ital,wght@0,W1;0,W2;1,W1;1,W2", "family=FN:ital,wght@0,W1;0,W2;0,W3;1,W1;1,W2;1,W3"
    else
    assign google_font_str = google_font_str | replace:"family=FN:ital,wght@0,W2;0,W1;1,W2;1,W1", "family=FN:ital,wght@0,W2;0,W3;0,W1;1,W2;1,W3;1,W1"
    assign google_font_str = google_font_str | replace:"family=FN:ital,wght@0,W1;0,W2;1,W1;1,W2", "family=FN:ital,wght@0,W1;0,W3;0,W2;1,W1;1,W3;1,W2"
    endif
    endif
    endif

    assign google_font_str = google_font_str | replace: 'FN', google_font_name_body | replace: 'W1', google_font_weight_body | replace: 'W2', google_font_weight_body_bold | replace: 'W3', google_font_weight_heading
    endif

    if settings.heading_font_type == "google"
    assign google_font_name_heading = settings.google_font_name_heading
    assign google_font_weight_heading = settings.google_font_weight_heading
    if google_font_name_body == ""
    assign google_font_str = "family=FN:ital,wght@0,W1;1,W1" | replace: 'FN', google_font_name_heading | replace: 'W1', google_font_weight_heading
    elsif google_font_name_body != "" and google_font_name_body != google_font_name_heading
    assign str = "&family=FN:ital,wght@0,W1;1,W1" | replace: 'FN', google_font_name_heading | replace: 'W1', google_font_weight_heading
    assign google_font_str = google_font_str | append:str
    endif
    endif
 -%}

