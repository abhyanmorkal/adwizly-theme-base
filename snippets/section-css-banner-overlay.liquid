
{%- if block.settings.image_overlay_opacity > 0 -%}
{%- assign image_overlay_fill = block.settings.image_overlay_fill | default: false, allow_false: true -%}
{% if section != blank %}#theme-section-{{ section.id }} {% endif %}#theme-block-{{ block.id }} .image-hover-box:after {
    content: "";
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 100%;
    --opacity: {{ block.settings.image_overlay_opacity | divided_by: 100.00 }};
    {%- if block.settings.image_overlay_color != "rgba(0,0,0,0)" -%}
    --color-image-overlay-hex:{{ block.settings.image_overlay_color }};
    {%- endif -%}
    {%- if image_overlay_fill -%}
    background: rgb(from var(--color-image-overlay-hex) r g b / calc(var(--opacity)));
    {%- else -%}
    background: linear-gradient(180deg, rgb(from var(--color-image-overlay-hex) r g b / 0) 50%, rgb(from var(--color-image-overlay-hex) r g b / calc(var(--opacity))));
    {%- endif -%}
    z-index:1;
    transform: translateZ(0);
}
{%- if image_overlay_fill == false -%}
@media (min-width:577px){ 
    {% if section != blank %}#theme-section-{{ section.id }} {% endif %}#theme-block-{{ block.id }}:has(.banner__block-item__content.align-items-start) .image-hover-box:after{
        background: linear-gradient(180deg, rgb(from var(--color-image-overlay-hex) r g b / calc(var(--opacity))) 0%, rgb(from var(--color-image-overlay-hex) r g b / 0) 50%);
    }
    {% if section != blank %}#theme-section-{{ section.id }} {% endif %}#theme-block-{{ block.id }}:has(.banner__block-item__content.align-items-center) .image-hover-box:after{
