<nav class="list-menu"
     style="--items-grid-count:{{ visible_items_count | at_most: linklist.size }};
            --items-grid-count--mobile:{{ linklist.size | at_most: 5 }};">
  <ul class="unstyle-ul tiles-menu">
    {%- for link in linklist -%}

    {%- liquid
        capture icon_code
        render 'get-menu-icon-code', icons:icons, forloop_index:forloop.index, icons_size: section.settings.icons_size
        endcapture
        if icon_code contains '<svg '
        assign width = icon_code | split: 'width="' | last | split: '"' | first | times: 1.0
        assign height = icon_code | split: 'height="' | last | split: '"' | first | plus: 0
        assign aspect_ratio = height | divided_by: width
        assign svgwidth = '--max-width:' | append:section.settings.icons_size | append:'px;'
        assign svgheight = section.settings.icons_size | times: aspect_ratio
        assign svgheight = '--max-height:' | append:svgheight | append:'px;'
        endif

        assign megamenu_item = '|' | append: link.title | append: '%%'
        if mega_menu_index contains megamenu_item
        assign megamenu_item = mega_menu_index | split: megamenu_item | last | split: '|' | first | plus: 0
        assign megamenu_block = section.blocks[megamenu_item]
        else
        assign megamenu_item = ''
        endif
    -%}
    {%- if link.links != blank or megamenu_item != "" -%}
    <li class="{% if megamenu_item != '' %}submenu--megamenu{% else %}submenu-position-js{% endif %} submenu-container submenu--to-left{% if megamenu_item != '' %} enable-scrollbar-megamenu-js{% if request.design_mode and megamenu_block.settings.admin_open_megamenu %} admin-select-menu-item{% endif %}{% endif %}">
      <a href="{{ link.url }}"
         class="body2 {{ menu_font_weight }} tiles-menu-item{% if link.current or link.child_active %} tiles-menu-item--active{% endif %}"
         style="{{ svgwidth }}{{ svgheight }}">
        <div class="tiles-menu-item__bg"></div>
        {{ icon_code }}
        <span class="tiles-menu-item__text">{{ link.title | escape }}</span>
        {%- render "menu-badge" item_name:link.title, fixed:true, gap3:true -%}
      </a>
      {%- liquid
          if megamenu_item == ''
          render "menu-submenu", link:link
          endif
       -%}
    </li>
    {%- if megamenu_item != '' -%}
    {%- render "menu-megamenu", link:link, megamenu_item:megamenu_item, fullwidth_menu:true, page_width:page_width -%}
    {%- endif -%}
    {%- else -%}
    <li class="">
      <a href="{{ link.url }}"
         class="body2 {{ menu_font_weight }} tiles-menu-item{% if link.current or link.child_active %} tiles-menu-item--active{% endif %}"
         style="{{ svgwidth }}{{ svgheight }}">
        <div class="tiles-menu-item__bg"></div>
        {{ icon_code }}
        <span class="tiles-menu-item__text">{{ link.title | escape }}</span>
        {%- render "menu-badge" item_name:link.title fixed:true, gap3:true -%}
      </a>
    </li>
    {%- endif -%}
    {%- endfor -%}
  </ul>
</nav>